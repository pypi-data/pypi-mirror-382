<odoo>
  <data>
    <!-- D.1: Search view -->
    <record id="employee_external_assignment_type_view_search" model="ir.ui.view">
      <field name="name">employee_external_assignment_type - search</field>
      <field name="model">employee_external_assignment_type</field>
      <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_search"
            />
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <data>
        </data>
      </field>
    </record>

    <!-- D.1: Tree view -->
    <record id="employee_external_assignment_type_view_tree" model="ir.ui.view">
      <field name="name">employee_external_assignment_type - tree</field>
      <field name="model">employee_external_assignment_type</field>
      <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_tree"
            />
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <data>
          <xpath expr="//field[@name='name']" position="after">
          </xpath>
        </data>
      </field>
    </record>

    <!-- D.1: Form view -->
    <record id="employee_external_assignment_type_view_form" model="ir.ui.view">
      <field name="name">employee_external_assignment_type - form</field>
      <field name="model">employee_external_assignment_type</field>
      <field
                name="inherit_id"
                ref="ssi_master_data_mixin.mixin_master_data_view_form"
            />
      <field name="mode">primary</field>
      <field name="arch" type="xml">
        <data>
          <xpath expr="//field[@name='active']" position="after">
          </xpath>
        </data>
      </field>
    </record>

    <!-- D.1: Window action -->
    <record id="employee_external_assignment_type_action" model="ir.actions.act_window">
      <field name="name">Employee External Assignment Types</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">employee_external_assignment_type</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- D.1: Menu item (placeholder parent) -->
    <menuitem
            id="employee_external_assignment_type_menu"
            name="Classes"
            action="employee_external_assignment_type_action"
            groups="employee_external_assignment_type_configurator"
            parent="ssi_hr.menu_career_configuration"
        />
  </data>
</odoo>

<odoo>
    <record id="hr_employee_view_form" model="ir.ui.view">
        <field name="name">form hr.employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//notebook" position="inside">
                    <page name="external_assignment" string="External Assignment">
                        <group name="external_assignment_group" colspan="4" col="2">
                            <field name="external_assignment_id" />
                        </group>
                        <field
                            name="external_assignment_ids"
                            nolabel="1"
                            colspan="4"
                            col="4"
                            mode="tree,form"
                        />
                    </page>
                </xpath>
            </data>
        </field>
    </record>

</odoo>

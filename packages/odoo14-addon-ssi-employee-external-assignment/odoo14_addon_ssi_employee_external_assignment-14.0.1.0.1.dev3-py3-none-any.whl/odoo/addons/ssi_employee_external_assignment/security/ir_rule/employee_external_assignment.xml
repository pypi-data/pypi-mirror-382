<odoo>
  <data>
    <!-- E.4: ir.rule for transaction object -->
    <record id="employee_external_assignment_internal_user_rule" model="ir.rule">
      <field name="name">employee_external_assignment - Internal User</field>
      <field name="model_id" ref="model_employee_external_assignment" />
      <field name="groups" eval="[(6,0,[ref('base.group_user')])]" />
      <field name="domain_force">[("user_id","=",user.id)]</field>
    </record>
    <record id="employee_external_assignment_company_rule" model="ir.rule">
      <field
                name="name"
            >employee_external_assignment - Responsible to company data</field>
      <field name="model_id" ref="model_employee_external_assignment" />
      <field
                name="groups"
                eval="[(6,0,[ref('employee_external_assignment_company_group')])]"
            />
      <field name="domain_force">[("company_id","=",user.company_id.id)]</field>
    </record>
    <record id="employee_external_assignment_child_company_rule" model="ir.rule">
      <field
                name="name"
            >employee_external_assignment - Responsible to company and all child companies data</field>
      <field name="model_id" ref="model_employee_external_assignment" />
      <field
                name="groups"
                eval="[(6,0,[ref('employee_external_assignment_child_company_group')])]"
            />
      <field name="domain_force">[("company_id","in",user.company_ids.ids)]</field>
    </record>
    <record id="employee_external_assignment_all_rule" model="ir.rule">
      <field name="name">employee_external_assignment - Responsible to all data</field>
      <field name="model_id" ref="model_employee_external_assignment" />
      <field name="groups" eval="[(6,0,[ref('employee_external_assignment_all')])]" />
      <field name="domain_force">[(1,'=',1)]</field>
    </record>
  </data>
</odoo>

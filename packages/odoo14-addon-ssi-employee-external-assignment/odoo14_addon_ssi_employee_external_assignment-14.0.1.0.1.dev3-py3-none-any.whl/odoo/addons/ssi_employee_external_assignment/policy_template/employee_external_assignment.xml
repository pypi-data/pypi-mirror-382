<odoo>
    <data noupdate="0">
        <record
            id="employee_external_assignment_policy_template"
            model="policy.template"
        >
            <field name="name">Standard</field>
            <field name="model_id" ref="model_employee_external_assignment" />
            <field
                name="state_field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','state')]"
            />
            <field name="sequence" eval="100" />
            <field name="python_code">result=True</field>
        </record>

        <!-- confirm -->
        <record
            id="employee_external_assignment_policy_template_detail_confirm"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','confirm_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','=','draft')]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('employee_external_assignment_user_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>

        <!-- approve -->
        <record
            id="employee_external_assignment_policy_template_detail_approve"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','approve_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="0" />
            <field name="restrict_additional" eval="1" />
            <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
        </record>

        <!-- reject -->
        <record
            id="employee_external_assignment_policy_template_detail_reject"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','reject_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','=','confirm')]"
            />
            <field name="restrict_user" eval="0" />
            <field name="restrict_additional" eval="1" />
            <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
        </record>

        <!-- restart approval -->
        <record
            id="employee_external_assignment_policy_template_detail_restart_approval"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','restart_approval_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','=','open')]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('employee_external_assignment_validator_group')])]"
            />
            <field name="restrict_additional" eval="1" />
            <field name="additional_python_code">result = False
if not document.approval_template_id:
    result = True</field>
        </record>

        <!-- terminate -->
        <record
            id="employee_external_assignment_policy_template_detail_terminate"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','terminate_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','=','open')]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('employee_external_assignment_user_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>

        <!-- cancel -->
        <record
            id="employee_external_assignment_policy_template_detail_cancel"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','cancel_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','in',['draft','open','done','terminate'])]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('employee_external_assignment_validator_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>

        <!-- restart -->
        <record
            id="employee_external_assignment_policy_template_detail_restart"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','restart_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','in',['cancel','reject'])]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('employee_external_assignment_validator_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>

        <!-- manual number -->
        <record
            id="employee_external_assignment_policy_template_detail_manual_number"
            model="policy.template_detail"
        >
            <field
                name="template_id"
                ref="employee_external_assignment_policy_template"
            />
            <field
                name="field_id"
                search="[('model_id.model','=','employee_external_assignment'),('name','=','manual_number_ok')]"
            />
            <field name="restrict_state" eval="1" />
            <field
                name="state_ids"
                search="[('field_id.model_id.model','=','employee_external_assignment'),('value','=','draft')]"
            />
            <field name="restrict_user" eval="1" />
            <field name="computation_method">use_group</field>
            <field
                name="group_ids"
                eval="[(6,0,[ref('employee_external_assignment_validator_group')])]"
            />
            <field name="restrict_additional" eval="0" />
        </record>
    </data>
</odoo>

TO SQUARE :SIZE
  REPEAT 4 [FORWARD :SIZE RIGHT 90]
END

TO TRIANGLE :SIZE
  REPEAT 3 [FORWARD :SIZE RIGHT 120]
END

TO STAR :SIZE
  REPEAT 5 [FORWARD :SIZE RIGHT 144]
END

TO FLOWER
  REPEAT 6 [
    FORWARD 50
    RIGHT 60
    FORWARD 50
    RIGHT 120
    FORWARD 50
    RIGHT 60
    FORWARD 50
    RIGHT 120
  ]
END

PENUP
SETXY -100 0
PENDOWN
SQUARE 50

PENUP
SETXY 0 0
PENDOWN
TRIANGLE 60

PENUP
SETXY 100 0
PENDOWN
STAR 40

PENUP
SETXY 0 -100
PENDOWN
FLOWER
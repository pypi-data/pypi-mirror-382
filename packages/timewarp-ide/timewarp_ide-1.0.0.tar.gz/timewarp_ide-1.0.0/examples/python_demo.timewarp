REM Demonstrate calling Python from TimeWarp
LET NAME$ = "World"
PRINT ""
PRINT "Multilingual greetings:"
PYTHON:
greet_func = TimeWarp.GET("GREET_FUNCTION") 
name = TimeWarp.GET("NAME$")

for lang in ["English", "Spanish", "French", "German"]:
    greeting = greet_func(name, lang)
    print(f"{lang}: {greeting}")
END_PYTHON


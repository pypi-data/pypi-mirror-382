<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

    <t t-extend="PosTicket">
        <t t-jquery="t[t-if='order.get_client().vat']" t-operation="replace"/>
        <t t-jquery="t[t-esc='order.get_client().address']" t-operation="replace"/>
    </t>

    <t t-extend="XmlReceipt">
        <t t-jquery='t[t-if="order.get_client()"]' t-operation="replace"/>
        <t t-jquery="[t-if='receipt.header_xml']" t-operation="after">
             <t t-if="order.get_client()">
                Name: <t t-esc="order.get_client().name ? order.get_client().name : ''"/><br />
             </t>
        </t>
    </t>

</templates>
"""NICOS test suite text client."""

import os
import sys

try:
    import coverage
except ImportError:
    pass
else:
    # Note: This will only fire up coverage if the COVERAGE_PROCESS_START env
    # variable is set
    coverage.process_startup()

from nicos.clients.cli import main
from nicos.utils import nocolor

nocolor()
os.environ['NICOS_HISTORY_FILE'] = os.devnull
sys.exit(main(sys.argv))

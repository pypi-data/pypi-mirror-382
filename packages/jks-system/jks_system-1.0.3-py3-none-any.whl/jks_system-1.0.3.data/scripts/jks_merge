import jks, sys, os, math, glob
if len(sys.argv) < 3:
    print("%s out in1 [in2 in3 ...]" % sys.argv[0])
    sys.exit(0)

fno=sys.argv[1]

res=jks.resamples()

for f in sys.argv[2:]:
    jks2=jks.resamples(f)
    print("Adding %d from %s" % (len(jks2.keys()),f))
    res.take(jks2,"*")

#res.compress()

res.save(fno)


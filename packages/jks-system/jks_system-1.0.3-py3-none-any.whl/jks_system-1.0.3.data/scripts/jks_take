import jks, sys, os, math, glob
if len(sys.argv) < 4:
    print("%s out in tag_pattern_1 [ tag_pattern_2 ... ]" % sys.argv[0])
    sys.exit(0)

fno=sys.argv[1]

res=jks.resamples()
ji=jks.resamples(sys.argv[2])

for f in sys.argv[3:]:
    print("Adding %s" % (f))
    res.take(ji,f)

res.compress()

res.save(fno)


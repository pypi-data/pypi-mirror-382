import jks, sys, os, math, glob
if len(sys.argv) < 5:
    print "%s in itag out otag" % sys.argv[0]
    sys.exit(0)

fin=sys.argv[1]
itag=sys.argv[2]
fout=sys.argv[3]
otag=sys.argv[4]

jks2=jks.resamples(fin)
res=jks.resamples()
res.add(otag,jks2.get(itag))
res.compress()
res.save(fout)


# Include essential project files
include AUTHORS.md
include CHANGELOG.md
include CONTRIBUTING.md
include LICENSE
include README.md
include pyproject.toml
include requirements.txt
include Makefile

# Include documentation (markdown and Python source, but not generated HTML)
recursive-include docs *.md *.py
exclude docs/*.html
exclude docs/*.out.*

# Include small example/test data only
recursive-include resources *.md
include resources/toy.tsv
include resources/galapagos.tsv
include resources/mushroom-small.tsv
include resources/english_phonology.tsv
include resources/cmudict.sample100.tsv
include resources/cmudict.sample1000.tsv

# Exclude large datasets (users can download separately if needed)
exclude resources/wiktionary.tsv
exclude resources/cmudict.tsv
exclude resources/pokemon.tsv
exclude resources/mushrooms.tsv

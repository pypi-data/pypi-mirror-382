# Production Environment Configuration (Example)
# Copy to .env.prod and replace placeholder secrets
#   PowerShell:  Copy-Item .env.prod.example .env.prod
#   bash/zsh:    cp .env.prod.example .env.prod

COMPOSE_PROJECT_NAME=mem8-prod
NODE_ENV=production
DEBUG=false

# Database
POSTGRES_DB=mem8_prod
POSTGRES_USER=mem8_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
DATABASE_URL=postgresql+asyncpg://mem8_user:CHANGE_ME_SECURE_PASSWORD@postgres:5432/mem8_prod

# Backend
BACKEND_PORT=8000
SECRET_KEY=CHANGE_ME_STRONG_SECRET_KEY
LOG_LEVEL=info

# Frontend
FRONTEND_PORT=22211
NEXT_PUBLIC_API_URL=https://your-domain.example.com

# Redis
REDIS_URL=redis://redis:6379


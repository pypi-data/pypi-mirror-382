# Development Environment Configuration (Example)
# Copy to .env.dev before running docker-compose
#   PowerShell:  Copy-Item .env.dev.example .env.dev
#   bash/zsh:    cp .env.dev.example .env.dev

COMPOSE_PROJECT_NAME=mem8-dev
NODE_ENV=development
DEBUG=true

# Database
POSTGRES_DB=mem8_dev
POSTGRES_USER=mem8_user
POSTGRES_PASSWORD=mem8_dev_password
DATABASE_URL=postgresql+asyncpg://mem8_user:mem8_dev_password@postgres:5432/mem8_dev

# Backend
BACKEND_PORT=8000
SECRET_KEY=dev-secret-key-not-for-production
LOG_LEVEL=debug

# Frontend
FRONTEND_PORT=22211
NEXT_PUBLIC_API_URL=http://localhost:8000

# Redis
REDIS_URL=redis://redis:6379


<odoo>
    <data>
        <record id="view_collectchildplaces_wizard_form" model="ir.ui.view">
            <field name="name">cm.collectchildplaces.wizard.form</field>
            <field name="model">cm.collectchildplaces.wizard</field>
            <field name="arch" type="xml">
                <form string="Collect child places wizard">
                    <sheet>
                        <group>
                            <field name="collect_behaviour" required="1" />
                            <field name="destination_place_id" required="1" />
                            <field name="request_users_for_submission_transfer" />
                            <field name="collected_child_ids" widget="many2many_widget" create="0">
                              <tree>
                                <field name="name"/>
                              </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button
              name="collect_child_places_action"
              string="Process"
              type="object"
              class="btn-primary"
              confirm="Are you sure? This action will change current structure of selected places."
            />
                        <button
              string="Cancel"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>

<odoo>
  <data>

    <record id="view_place_category_window" model="ir.actions.act_window">
      <field name="name">Place categories</field>
      <field name="res_model">cm.place.category</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_place_category_tree" model="ir.ui.view">
      <field name="name">cm.place.category.tree</field>
      <field name="model">cm.place.category</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="slug_id"/>
          <field name="icon"/>
          <field name="color"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <record id="view_place_category_form" model="ir.ui.view">
      <field name="name">cm.place.category.form</field>
      <field name="model">cm.place.category</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <field name="company_id" groups="base.group_multi_company"/>
                  <field name="name" attrs="{'required': True}"/>
                  <field name="slug_id" attrs="{'required': True}"/>
                  <field name="icon" attrs="{'required': True}"/>
                  <field name="color" attrs="{'required': True}"/>
                  <field name="marker_color" attrs="{'required': True}"/>
                  <field name="marker_text_color" attrs="{'required': True}"/>
                  <field name="marker_bg_color" attrs="{'required': True}"/>
                  <field name="marker_border_color" attrs="{'required': True}"/>
                  <field name="description"/>
                  <field name="proposal_form_model_id"/> 
                  <field name="allowed_in_map_mids" readonly="True"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Place categories" id="community_maps.place_category" parent="community_maps.config_menu_root" action="view_place_category_window"/>

  </data>
</odoo>

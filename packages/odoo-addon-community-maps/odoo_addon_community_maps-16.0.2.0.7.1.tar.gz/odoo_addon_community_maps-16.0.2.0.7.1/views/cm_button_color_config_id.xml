<odoo>
  <data>

    <record id="view_button_color_config_window" model="ir.actions.act_window">
      <field name="name">Button color configs</field>
      <field name="res_model">cm.button.color.config</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_button_color_config_tree" model="ir.ui.view">
      <field name="name">cm.button.color.config.tree</field>
      <field name="model">cm.button.color.config</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="bg_color"/>
          <field name="text_color"/>
          <field name="bg_hover_color"/>
          <field name="text_hover_color"/>
        </tree>
      </field>
    </record>

    <record id="view_button_color_config_form" model="ir.ui.view">
      <field name="name">cm.button.color.config.form</field>
      <field name="model">cm.button.color.config</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <field name="company_id" groups="base.group_multi_company"/>
                  <field name="name" attrs="{'required': True}"/>
                </group>
                <group>
                  <field name="bg_color" attrs="{'required': True}"/>
                  <field name="text_color" attrs="{'required': True}"/>
                  <field name="border_color" attrs="{'required': True}"/>
                </group>
                <group>
                  <field name="bg_hover_color" attrs="{'required': True}"/>
                  <field name="text_hover_color" attrs="{'required': True}"/>
                  <field name="border_hover_color" attrs="{'required': True}"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Button colors" id="community_maps.button_color_config" parent="community_maps.config_menu_root" action="view_button_color_config_window"/>

  </data>
</odoo>

<odoo>
  <data>

    <record id="view_map_colorschema_window" model="ir.actions.act_window">
      <field name="name">Map configs</field>
      <field name="res_model">cm.map.colorschema</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_map_colorschema_tree" model="ir.ui.view">
      <field name="name">cm.map.colorschema.tree</field>
      <field name="model">cm.map.colorschema</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_map_colorschema_form" model="ir.ui.view">
      <field name="name">cm.map.colorschema.form</field>
      <field name="model">cm.map.colorschema</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="General">
                <group string="Main">
                  <field name="company_id" groups="base.group_multi_company"/>
                  <field name="name" attrs="{'required': True}"/>
                </group>
                <group string="Color Schema">
                  <field name="color_text_base" attrs="{'required': True}"/>
                  <field name="color_fill" attrs="{'required': True}"/>
                  <field name="color_border" attrs="{'required': True}"/>
                  <field name="color_button" attrs="{'required': True}"/>
                  <field name="color_button_hover" attrs="{'required': True}"/>
                  <field name="color_button_text" attrs="{'required': True}"/>
                  <field name="color_button_text_hover" attrs="{'required': True}"/>
                  <field name="color_button_text_inverted" attrs="{'required': True}"/>
                  <field name="color_button_text_inverted_hover" attrs="{'required': True}"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Map color schemas" id="community_maps.map_colorschema" parent="community_maps.config_menu_root" action="view_map_colorschema_window"/>

  </data>
</odoo>

<odoo>
  <data noupdate="1">
    <record id="email_templ_request_submissions_transfer" model="mail.template">
      <field name="name">Confirmation submissions tranfer</field>
          <field name="email_from">{{ object.company_id.email }}</field>
          <field name="subject">Please reject your submission transfer if you wish to maintain original location.</field>
          <field name="email_to">{{ object.email_from }}</field>
          <field name="model_id" ref="model_cm_form_submission_transfer_request" />
          <field name="auto_delete" eval="False" />
          <field name="lang">{{ object.submission_id.submission_lang_code }}</field>
          <field name="body_html" type="html">
            <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34);">
                <p>Your reject link <a href="{{ object.reject_confirmation_url }}">Click Here</a></p>
            </div>
          </field>
      </record>
      <record id="email_templ_lead_request_submissions_transfer_successful" model="mail.template">
        <field name="name">Submissions tranfer successful</field>
            <field name="email_from">{{ object.company_id.email }}</field>
            <field name="subject">Your submission has been successfully transfered</field>
            <field name="email_to">{{ object.email_from }}</field>
            <field name="model_id" ref="model_cm_form_submission_transfer_request" />
            <field name="auto_delete" eval="False" />
            <field name="lang">{{ object.submission_id.submission_lang_code }}</field>
            <field name="body_html" type="html">
                <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34);">
                    <p>Your submission has been successfully moved to <t t-out="object.destination_place_id.name" /></p>
                </div>
            </field>
      </record>
  </data>
</odoo>

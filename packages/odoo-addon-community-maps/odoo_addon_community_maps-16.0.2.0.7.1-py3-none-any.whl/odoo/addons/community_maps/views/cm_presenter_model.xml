<odoo>
  <data>

    <record id="view_presenter_model_window" model="ir.actions.act_window">
      <field name="name">Presenter models</field>
      <field name="res_model">cm.presenter.model</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_presenter_model_tree" model="ir.ui.view">
      <field name="name">cm.presenter.model.tree</field>
      <field name="model">cm.presenter.model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record id="view_presenter_model_form" model="ir.ui.view">
      <field name="name">cm.presenter.model.form</field>
      <field name="model">cm.presenter.model</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <field name="company_id" groups="base.group_multi_company"/>
                  <field name="name" attrs="{'required': True}"/>
                  <field name="text_color" attrs="{'required': True}"/>
                  <field name="display_tooltip_on_presenter"/>
                  <field name="allowed_in_map_mids" readonly="True"/>
                </group>
              </page>
              <page string="Form Json Schema">
                <group>
                  <field name="json_dataschema" attrs="{'required': True}"/>
                  <field name="json_schema" attrs="{'required': True}"/>
                  <field name="json_uischema" attrs="{'required': True}"/>
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Presenter models" id="community_maps.presenter_model" parent="community_maps.config_menu_root" action="view_presenter_model_window"/>

  </data>
</odoo>

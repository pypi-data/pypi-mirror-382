<odoo>
  <data>

    <record id="view_submission_transfer_request_window" model="ir.actions.act_window">
      <field name="name">Submission transfer requests</field>
      <field name="res_model">cm.form.submission.transfer.request</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_submission_transfer_request_tree" model="ir.ui.view">
      <field name="name">cm.form.submission.transfer.request.tree</field>
      <field name="model">cm.form.submission.transfer.request</field>
      <field name="arch" type="xml">
        <tree>
          <field name="company_id" groups="base.group_multi_company"/>
          <field name="submission_id"/>
          <field name="origin_place_id"/>
          <field name="destination_place_id"/>
          <field name="request_date"/>
          <field name="transfer_date"/>
          <field name="rejected_date"/>
          <field name="status" />
        </tree>
      </field>
    </record>

    <record id="view_submission_transfer_request_form" model="ir.ui.view">
      <field name="name">cm.form.submission.transfer.request.form</field>
      <field name="model">cm.form.submission.transfer.request</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <!--<field name="company_id" groups="base.group_multi_company"/>-->
                  <field name="name" />
                  <field name="company_id" groups="base.group_multi_company"/>
                  <field name="submission_id" />
                  <field name="origin_place_id" />
                  <field name="destination_place_id" />
                  <field name="child_place_id" />
                  <field name="status" />
                  <field name="request_date" />
                  <field name="transfer_date" />
                  <field name="rejected_date" />
                  <field name="reject_confirmation_url" />
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Submission transfers" id="community_maps.submission_transfer_request" parent="community_maps.menu_root" action="view_submission_transfer_request_window"/>

  </data>
</odoo>

<odoo>
  <data>

    <record id="view_form_model_window" model="ir.actions.act_window">
      <field name="name">Form models</field>
      <field name="res_model">cm.form.model</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_form_model_tree" model="ir.ui.view">
      <field name="name">cm.form.model.tree</field>
      <field name="model">cm.form.model</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="slug_id"/>
        </tree>
      </field>
    </record>

    <record id="view_form_model_form" model="ir.ui.view">
      <field name="name">cm.form.model.form</field>
      <field name="model">cm.form.model</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <field name="company_id" groups="base.group_multi_company"/>
                  <field name="name" attrs="{'required': True}" />
                  <field name="description" />
                  <field name="slug_id" attrs="{'required': True}" />
                  <field name="generate_submission_in_proposal" />
                  <field name="submission_ok_message" attrs="{'required': True}" />
                  <field name="submission_ok_email_template_id" />
                  <field name="follower_partner_id" />
                  <field name="allowed_in_map_mids" />
                </group>
              </page>
              <page string="Buttons">
                <group>
                  <field name="cta_button_label" attrs="{'required': False}" />
                  <field name="cta_button_color_config_id" attrs="{'required': False}" />
                </group>
                <group>
                  <field name="button_label" attrs="{'required': True}" />
                  <field name="button_color_config_id" attrs="{'required': True}" />
                </group>
              </page>
              <page string="Form Json Schema">
                <group>
                  <field name="json_initial_data" attrs="{'required': True}" />
                  <field name="json_schema" attrs="{'required': True}" />
                  <field name="json_uischema" attrs="{'required': True}" />
                </group>
              </page>
              <page string="Submission Fields Map Json Schema">
                <group>
                  <field name="json_submission_fields_map" attrs="{'required': True}" />
                  <field name="json_place_proposal_submission_fields_map" attrs="{'required': True}" />
                  <field name="json_place_proposal_fields_map" attrs="{'required': True}" />
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Form models" id="community_maps.form_model" parent="community_maps.config_menu_root" action="view_form_model_window"/>

  </data>
</odoo>

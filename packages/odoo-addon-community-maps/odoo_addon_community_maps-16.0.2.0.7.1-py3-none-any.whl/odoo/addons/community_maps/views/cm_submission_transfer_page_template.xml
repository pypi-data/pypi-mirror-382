<odoo>
  <template id="submission_transfer_page" name="submission_transfer_page">
    <t t-call="website.layout">
      <div id="wrap" class="o_portal_wrap">
        <div class="container oe_submission_transfer_page">
          <div class="row justify-content-center">
            <div class="col-xs-12 col-sm-10 col-md-8 col-lg-8 mt-3">
              <t t-if="error">
                <div class="alert alert-warning">
                  <t t-raw="error" />
                </div>
              </t>
              <t t-if="success">
                <div class="alert alert-success">
                  <t t-raw="success" />
                </div>
              </t>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>

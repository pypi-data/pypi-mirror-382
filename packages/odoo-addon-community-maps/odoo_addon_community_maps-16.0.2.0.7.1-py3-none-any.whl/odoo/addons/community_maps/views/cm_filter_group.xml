<odoo>
  <data>

    <record id="view_filter_group_window" model="ir.actions.act_window">
      <field name="name">Custom filters</field>
      <field name="res_model">cm.filter.group</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record id="view_filter_group_tree" model="ir.ui.view">
      <field name="name">cm.filter.group.tree</field>
      <field name="model">cm.filter.group</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="slug_id"/>
        </tree>
      </field>
    </record>

    <record id="view_filter_group_form" model="ir.ui.view">
      <field name="name">cm.filter.group.form</field>
      <field name="model">cm.filter.group</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <notebook>
              <page string="General">
                <group>
                  <field name="company_id" groups="base.group_multi_company"/>
                  <field name="name" attrs="{'required': True}" />
                  <field name="slug_id" attrs="{'required': True}" />
                  <field name="filter_ids" widget="one2many_list">
                    <tree>
                      <field name="name"/>
                      <field name="slug_id"/>
                      <field name="icon"/>
                      <field name="color"/>
                      <field name="description"/>
                    </tree>
                    <form>
                      <group>
                        <field name="name" required="True"/>
                        <field name="slug_id" required="True"/>
                        <field name="icon" required="True"/>
                        <field name="color" required="True"/>
                        <field name="marker_color" required="True"/>
                        <field name="marker_text_color" required="True"/>
                        <field name="marker_bg_color" required="True"/>
                        <field name="marker_border_color" required="True"/>
                        <field name="description"/>
                      </group>
                    </form>
                  </field>
                  <field name="allowed_in_map_mids" />
                </group>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <menuitem name="Custom filters" id="community_maps.filter_group" parent="community_maps.config_menu_root" action="view_filter_group_window"/>

  </data>
</odoo>

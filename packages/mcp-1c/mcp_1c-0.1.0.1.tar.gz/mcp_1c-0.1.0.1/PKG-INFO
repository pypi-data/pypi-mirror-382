    entity_set="Catalog_Products",
    entity_key="guid'...'",
    data={
        "Description": "–û–±–Ω–æ–≤–ª–µ–Ω–Ω–æ–µ –Ω–∞–∏–º–µ–Ω–æ–≤–∞–Ω–∏–µ",
        "Price": 1200.00
    }

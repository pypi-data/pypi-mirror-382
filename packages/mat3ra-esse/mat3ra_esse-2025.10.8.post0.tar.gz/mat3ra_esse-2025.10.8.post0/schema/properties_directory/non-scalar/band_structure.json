{
    "$id": "properties-directory/non-scalar/band-structure",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Band structure property schema",
    "type": "object",
    "allOf": [
        {
            "$ref": "../../core/abstract/2d_plot.json"
        }
    ],
    "properties": {
        "xAxis": {
            "type": "object",
            "properties": {
                "label": {
                    "enum": [
                        "kpoints"
                    ]
                },
                "units": {
                    "$ref": "../../definitions/units.json#/coordinates_lattice_reciprocal"
                }
            }
        },
        "yAxis": {
            "type": "object",
            "properties": {
                "label": {
                    "enum": [
                        "energy"
                    ]
                },
                "units": {
                    "$ref": "../../definitions/units.json#/energy"
                }
            }
        },
        "name": {
            "enum": [
                "band_structure"
            ]
        },
        "spin": {
            "description": "spin of each band",
            "type": "array",
            "items": {
                "type": "number",
                "enum": [
                    0.5,
                    -0.5
                ]
            }
        }
    },
    "required": [
        "name",
        "spin",
        "xAxis",
        "yAxis"
    ]
}

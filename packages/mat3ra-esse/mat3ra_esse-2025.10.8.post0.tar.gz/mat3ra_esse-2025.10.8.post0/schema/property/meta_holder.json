{
    "$id": "property/meta-holder",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Meta property holder schema",
    "type": "object",
    "allOf": [
        {
            "description": "entity schema",
            "$ref": "../in_memory_entity/base.json"
        }
    ],
    "properties": {
        "data": {
            "description": "container of the information, specific to each property",
            "type": "object",
            "oneOf": [
                {
                    "$ref": "../methods_directory/physical/psp/file_data_item.json"
                }
            ]
        },
        "source": {
            "type": "object",
            "properties": {
                "type": {
                    "description": "Type of the material property's source.",
                    "type": "string"
                },
                "info": {
                    "type": "object"
                }
            },
            "required": [
                "type"
            ]
        }
    },
    "required": [
        "data",
        "source"
    ]
}

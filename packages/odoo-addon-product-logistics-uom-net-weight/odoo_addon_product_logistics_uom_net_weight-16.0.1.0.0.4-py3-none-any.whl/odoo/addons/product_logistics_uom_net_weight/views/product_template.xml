<odoo>

    <record id="view_product_template_form" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_net_weight.view_product_template_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <label for="net_weight" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </label>
            <field name="net_weight" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </field>
            <label for="net_weight" position="after">
                <label
                    for="product_net_weight"
                    attrs="{'invisible':[('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}"
                />
            </label>
            <field name="net_weight" position="after">
                <field name="product_net_weight" class="oe_inline" />
            </field>
        </field>
    </record>

</odoo>

<?xml version="1.0" encoding="utf-8"?>
<rolemap>
  <roles>
    <role name="CountryManager" />
    <role name="Sector" />
  </roles>
  <permissions>
    <permission acquire="True"
                name="CMFEditions: Apply version control"
    >
      <role name="Manager" />
      <role name="Sector" />
      <role name="CountryManager" />
    </permission>
    <permission acquire="True"
                name="CMFEditions: Access previous versions"
    >
      <role name="Manager" />
      <role name="Sector" />
      <role name="CountryManager" />
    </permission>
    <permission acquire="True"
                name="CMFEditions: Revert to previous versions"
    >
      <role name="Manager" />
      <role name="Sector" />
      <role name="CountryManager" />
    </permission>
    <permission acquire="True"
                name="CMFEditions: Save new version"
    >
      <role name="Manager" />
      <role name="Sector" />
      <role name="CountryManager" />
    </permission>
    <permission acquire="True"
                name="Euphorie: Manage country"
    >
      <role name="Manager" />
      <role name="CountryManager" />
    </permission>
    <permission acquire="True"
                name="Euphorie: Add new RIE Content"
    >
      <role name="Manager" />
      <role name="Sector" />
      <role name="CountryManager" />
    </permission>
    <permission acquire="True"
                name="Euphorie: Delete published content"
    >
      <role name="CountryManager" />
      <role name="Manager" />
    </permission>
  </permissions>
</rolemap>

{
    "quality_inspections": [
        {
            "identifier": "common_inspections",
            "version": "1.0.0",
            "type": "group",
            "inspections": [
                "product_data_size",
                "product_attr_size",
                "validate_product",
                "absolute_orbit",
                "relative_orbit"
            ]
        },
        {
            "identifier": "product_data_size",
            "version": "1.0.0",
            "type": "product_data_size",
            "thematic": "GENERAL_QUALITY",
            "description": "Evaluate the data size in Bytes for anomaly detection",
            "precondition": {},
            "min": 1048576,
            "max": 10737418240
        },
        {
            "identifier": "product_attr_size",
            "version": "1.0.0",
            "type": "product_attr_size",
            "thematic": "GENERAL_QUALITY",
            "description": "Evaluate the attr size in Bytes for anomaly detection",
            "precondition": {},
            "min": 128,
            "max": 1048576
        },
        {
            "identifier": "validate_product",
            "version": "1.0.0",
            "thematic": "GENERAL_QUALITY",
            "type": "validate",
            "description": "validity product check",
            "precondition": {}
        },
        {
            "identifier": "absolute_orbit",
            "version": "0.0.1",
            "type": "formulas",
            "thematic": "GENERAL_QUALITY",
            "description": "validate that absolute orbit number is between value",
            "precondition": {},
            "evaluator": {
                "parameters": [
                    {
                        "name": "v_min",
                        "value": 0
                    },
                    {
                        "name": "v_max",
                        "value": 999999
                    }
                ],
                "variables": [],
                "attributes": [
                    {
                        "name": "absolute_orbit",
                        "path": "stac_discovery/properties/sat:absolute_orbit"
                    }
                ],
                "formula": "v_min < absolute_orbit < v_max"
            }
        },
        {
            "identifier": "relative_orbit",
            "version": "0.0.1",
            "type": "formulas",
            "thematic": "GENERAL_QUALITY",
            "description": "validate that relative orbit number is between value",
            "precondition": {},
            "evaluator": {
                "parameters": [
                    {
                        "name": "v_min",
                        "value": 0
                    },
                    {
                        "name": "v_max",
                        "value": 999
                    }
                ],
                "variables": [],
                "attributes": [
                    {
                        "name": "relative_orbit",
                        "path": "stac_discovery/properties/sat:relative_orbit"
                    }
                ],
                "formula": "v_min < relative_orbit < v_max"
            }
        }
    ]
}

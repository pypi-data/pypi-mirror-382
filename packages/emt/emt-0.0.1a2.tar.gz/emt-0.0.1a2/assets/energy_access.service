[Unit]
After=multi-user.target
Wants=network.target
After=network.target

[Service]
Type=oneshot
ExecStartPre=+/usr/bin/find /sys/devices/virtual/powercap -type d -exec chmod g+rx {} + -exec chown root:powercap {} +
ExecStartPre=+/usr/bin/find /sys/devices/virtual/powercap -name energy_uj -exec chmod g+r {} + -exec chown root:powercap {} +
RemainAfterExit=yes
ExecStart=/bin/true
Group=powercap

[Install]
WantedBy=multi-user.target
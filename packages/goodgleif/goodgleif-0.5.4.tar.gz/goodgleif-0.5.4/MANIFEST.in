include README.md
include LICENSE
include requirements.txt

graft goodgleif/data
graft goodgleif/config

# Include only the manifest file - parquet files will be downloaded from GitHub
include goodgleif/data/*.txt

# Include industry-specific parquet files (smaller)
include goodgleif/data/gleif_*.parquet

# Exclude the large partitioned files (users can download from GitHub if needed)
exclude goodgleif/data/gleif_classified_part_*.parquet

global-exclude *.py[cod] __pycache__ .DS_Store



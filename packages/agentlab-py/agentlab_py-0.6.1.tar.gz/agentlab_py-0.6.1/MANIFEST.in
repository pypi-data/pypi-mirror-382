# Include important files in the package
include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt

# Include all Python files
recursive-include agentlab *.py
recursive-include examples *.py

# Include type stubs
include agentlab/py.typed

# Exclude development and testing files
exclude test_import.py
exclude .gitignore
exclude .github
global-exclude *.pyc
global-exclude __pycache__
global-exclude .pytest_cache


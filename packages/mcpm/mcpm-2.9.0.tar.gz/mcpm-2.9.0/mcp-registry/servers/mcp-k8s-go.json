  "installations": {
    "npm": {
      "type": "npm",
      "command": "npx",
      "args": [
        "@strowk/mcp-k8s"
      ],
      "description": "Run using npx"
    },
    "docker": {
      "type": "docker",
      "command": "docker",
      "args": [
        "run",
        "-i",
        "-v",
        "~/.kube/config:/home/nonroot/.kube/config",
        "--rm",
        "mcpk8s/server:latest"
      ],
      "description": "Run using Docker"
    }
  },

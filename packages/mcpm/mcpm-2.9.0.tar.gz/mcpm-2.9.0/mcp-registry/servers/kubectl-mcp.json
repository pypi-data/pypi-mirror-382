  "installations": {
    "python": {
      "type": "python",
      "command": "python",
      "args": [
        "-m",
        "kubectl_mcp_tool.minimal_wrapper"
      ],
      "env": {
        "KUBECONFIG": "${KUBECONFIG}"
      },
      "description": "Windsurf configuration"
    }
  },
  "arguments": {
    "KUBECONFIG": {
      "description": "The path to the kubeconfig file",
      "required": true,
      "example": "/path/to/your/.kube/config"
    }
  },

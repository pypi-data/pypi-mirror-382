# SRT Generator 패키지 매니페스트
# 민감정보 파일들을 패키지에서 제외

# 환경변수 파일 제외
exclude .env
exclude .env.*
exclude env.template

# API 키 및 시크릿 파일 제외
exclude *.key
exclude *.secret
exclude secrets.json
exclude config.json
exclude api_keys.yaml
exclude api_keys.yml

# Git 관련 파일 제외
exclude .git*
exclude .gitignore

# 보안 체크리스트 제외
exclude SECURITY_CHECKLIST.md

# 대체 파일 제외
exclude replacements.txt

# 개발용 파일 제외
exclude tests/
exclude test_*
exclude *test.py

# 빌드 관련 디렉터리 제외
prune build
prune dist
global-exclude *.egg-info/*

# IDE 파일 제외
exclude .vscode/
exclude .idea/
exclude *.swp
exclude *.swo

# OS 파일 제외
exclude .DS_Store
exclude Thumbs.db

# 프로젝트 특정 디렉터리/대용량 자산 제외
prune input
prune output
global-exclude *.mp4 *.mp3 *.wav *.m4a *.avi *.mov *.mkv *.srt *.json

# 임시 디렉터리/파일 제외
prune temp
prune tmp
global-exclude *.tmp *.log

# Bytecode / caches / virtual envs 제외
prune __pycache__
prune .pytest_cache
prune .cache
prune .venv
prune venv
global-exclude .python-version

# Translator project extras
prune translator/tests
global-exclude translator/uv.lock
<odoo>
    <record model="ir.ui.view" id="edi_exchange_record_form_view">
        <field name="model">edi.exchange.record</field>
        <field name="inherit_id" ref="edi_core_oca.edi_exchange_record_view_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="object"
                    class="oe_stat_button"
                    icon="fa-calendar"
                    name="action_view_related_queue_jobs"
                    invisible="not related_queue_jobs_count"
                    groups="base_edi.group_edi_user"
                >
                    <field
                        string="Jobs"
                        name="related_queue_jobs_count"
                        widget="statinfo"
                        readonly="1"
                    />
                </button>
            </div>
        </field>
    </record>
</odoo>

{% if imported -%}
{{ var_name }} = project.connections.get(name={{ conn_name }})
{%- else -%}
{{ var_name }} = project.create_connection(
    name = {{ conn_name }},
    datasource_type = platform.datasources.get(name="{{ datasource_type }}"),
    properties = {
        {% for prop, value in properties.items() %}
        "{{ prop }}": {{ value }},
        {% endfor %}
    }
)
{%- endif %}

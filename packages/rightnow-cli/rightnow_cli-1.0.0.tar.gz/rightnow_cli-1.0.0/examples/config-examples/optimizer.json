{
  "// Optimizer Configuration": "",
  "// Specialized for CUDA kernel optimization with premium models": "",

  "model": "anthropic/claude-3.5-sonnet",

  "agents": {
    "optimizer": {
      "description": "Specialized CUDA kernel optimizer",
      "model": "anthropic/claude-3.5-sonnet",
      "temperature": 0.2,
      "max_tokens": 4000,
      "tools": {
        "bash": false

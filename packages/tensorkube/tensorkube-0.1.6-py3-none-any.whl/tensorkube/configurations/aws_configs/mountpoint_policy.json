{
    "Version": "2012-10-17",
    "Statement": [
         {
             "Sid": "MountpointFullBucketAccess",
             "Effect": "Allow",
             "Action": [
                 "s3:ListBucket"
             ],
             "Resource": [
                 "arn:aws:s3:::USER_BUCKET"
             ]
         },
         {
             "Sid": "MountpointFullObjectAccess",
             "Effect": "Allow",
             "Action": [
                 "s3:GetObject",
                 "s3:PutObject",
                 "s3:AbortMultipartUpload",
                 "s3:DeleteObject"
             ],
             "Resource": [
                 "arn:aws:s3:::USER_BUCKET/*"
             ]
         }
    ]
}

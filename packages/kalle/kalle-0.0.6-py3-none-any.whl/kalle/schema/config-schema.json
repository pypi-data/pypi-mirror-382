{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kalle Config",
  "type": "object",
  "properties": {
    "data_dir": {
      "type": "string"
    },
    "default_conversation": {
      "type": "string"
    },
    "patterns_dir": {
      "type": "string"
    },
    "cache_dir": {
      "type": "string"
    },
    "format_output": {
      "type": "boolean"
    },
    "smart_tool_selection": {
      "type": "boolean"
    },
    "interactive_style": {
      "type": "string"
    },
    "voicebox": {
      "type": "object",
      "properties": {
        "uri": {
          "type": "string"
        },
        "api_key": {
          "type": "string"
        },
        "voice": {
          "type": "string"
        },
        "speed": {
          "type": "number"
        }
      }
    },
    "memory": {
      "type": "object",
      "properties": {
        "knowledgebase_engine": {
          "type": "string"
        },
        "knowledgebase": {
          "type": "string"
        },
        "max_knowledgebase_results": {
          "type": "integer"
        },
        "min_relevance_cutoff": {
          "type": "number"
        },
        "embedding_dimensions": {
          "type": "integer"
        }
      }
    },
    "profiles": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "connector": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "key": {
                "type": "string"
              },
              "project_id": {
                "type": "string"
              },
              "region": {
                "type": "string"
              },
              "credentials_path": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ],
            "additionalProperties": false
          },
          "model": {
            "type": "string"
          },
          "model_params": {
            "type": "object",
            "properties": {
              "temperature": {
                "type": "number"
              },
              "seed": {
                "type": "integer"
              }
            }
          }
        },
        "required": [
          "name",
          "connector",
          "model"
        ]
      }
    },
    "models_map": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "location": {
              "type": "string"
            },
            "tokenizer": {
              "type": "string"
            },
            "context_size": {
              "type": "integer"
            },
            "path": {
              "type": "string"
            },
            "repo_id": {
              "type": "string"
            },
            "filename": {
              "type": "string"
            },
            "model": {
              "type": "string"
            },
            "publisher": {
              "type": "string"
            },
            "params": {
              "type": "object"
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        }
      }
    },
    "prompts": {
      "type": "object",
      "properties": {
        "kalle_system_prompt": {
          "type": "string"
        },
        "base_tool_prompt": {
          "type": "string"
        }
      },
      "required": [
        "kalle_system_prompt",
        "base_tool_prompt"
      ],
      "additionalProperties": false
    },
    "tools": {
      "type": "object",
      "additionalProperties": {
        "type": "object"
      }
    }
  },
  "additionalProperties": false
}

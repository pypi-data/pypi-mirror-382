#app-grid {
    layout: grid;
    grid-size: 1;
    grid-columns: 1fr;
    grid-rows: auto 1fr auto;
}

#title {
    width: 100%;
    text-style: bold;
    border: dodgerblue;
    padding-left: 1;
}

#main {
    width: 100%;
    /* background: $panel; */
    /* border: dodgerblue; */
}

#tabs {
    width: 100%;
}

#metadata-tab {
    background: $boost;
    color: auto;
    margin-bottom: 1;
    padding: 0;
}

#conversation-tab {
    background: $boost;
    color: auto;
    margin-bottom: 1;
    padding: 0;
}

.conversation-item {
    background: $boost;
    color: auto;
    margin-bottom: 1;
    margin: 0;
    padding: 0;
}

#pretty-version {
    border: solid ansi_white;
    width: 100%;
    padding: 1;
}

#pretty-profile {
    border: solid ansi_white;
    width: 100%;
    padding: 1;
}

.profile-item {
    padding-left: 1;
}

#pretty-system-prompt {
    border: solid ansi_white;
    width: 100%;
    padding: 1;
}

.conversation-item-head {
    height: auto;
    padding-left: 1;
}

.conversation-item-user {
    height: auto;
    border: darkorange;
}

.conversation-item-assistant {
    height: auto;
    border: deepskyblue;
}

.conversation-item-brief {
    height: auto;
    padding: 0;
    background: $boost;
    border: ansi_white;
    overflow-x: hidden;
    overflow-y: hidden;
}

.conversation-content-markdown {
    padding-left: 1;
    background: $boost;
}

.conversation-content-raw {
    padding-left: 1;
    background: $boost;
}

.conversation-item-collapse {
    height: auto;
    padding: 0;
}

#bottom-button-pane {
    height: auto;
    layout: grid;
}

#load-conversation-title {
    padding-left: 1;
}


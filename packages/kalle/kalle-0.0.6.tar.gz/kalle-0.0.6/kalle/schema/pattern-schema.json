{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pattern",
  "type": "object",
  "properties": {
    "key": {"type": "string"},
    "name": {"type": "string"},
    "notes": {"type": "string"},
    "system_prompt_template": {
      "type": "string"
    },
    "prompt_template": {
      "type": "string"
    },
    "tools": {
      "type": "array",
      "items": {"type": "string"}
    },
    "constrainer": {
      "type": "object",
      "properties": {
        "type": {"type": "string", "enum": ["regex", "jsonschema"]},
        "value": {"type": "string"}
      },
      "required": ["type", "value"]
    },
    "profile": {
      "type": "string"
    }
  },
  "required": ["key"],
  "oneOf": [
    {"required": ["system_prompt_template"]},
    {"required": ["prompt_template"]},
    {"required": ["tools"]},
    {"required": ["constrainer"]}
  ]
}

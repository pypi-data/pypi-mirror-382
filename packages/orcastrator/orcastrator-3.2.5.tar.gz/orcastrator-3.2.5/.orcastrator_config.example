# Example global configuration file for Orcastrator
# Copy this file to ~/.orcastrator_config and customize as needed
#
# All paths support ~ for home directory expansion
# All settings are optional - if not specified, Orcastrator will use sensible defaults

# Path to ORCA executable
# If not specified, will search PATH
# orca_path = "/opt/orca/orca"

# Path to OpenMPI installation directory
# openmpi_path = "/opt/openmpi"

# Default scratch directory for calculations
# If not specified, defaults to /scratch (or /tmp if /scratch doesn't exist)
# scratch_dir = "/scratch"

# Include the README
include README.md

# Include the license file
include LICENSE

# Include all markdown documentation files
include *.md
recursive-include . *.md

# Include configuration files
include *.json
include *.yaml
include *.yml

# Include test files
recursive-include tests *.py

# Include example files
include examples/*.py
include demos/*.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .git*
global-exclude .DS_Store
global-exclude *.log

# Exclude build artifacts
prune build/
prune dist/
prune *.egg-info/
<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="product_normal_form_view_attachments" model="ir.ui.view">
        <field name="name">product.normal.form.view.attachments</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <xpath expr="///div[@name='button_box']" position="inside">
                <button
                    class="oe_stat_button"
                    name="action_see_product_template_attachments"
                    type="object"
                    icon="fa-files-o"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Template<br />Attachments</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>

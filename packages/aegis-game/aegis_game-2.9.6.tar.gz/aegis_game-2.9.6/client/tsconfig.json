{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      // https://github.com/rollup/rollup/issues/5199
      "rollup/parseAst": ["./node_modules/rollup/dist/parseAst"]
    }
  },
  "exclude": ["node_modules", "packed-client"]
}

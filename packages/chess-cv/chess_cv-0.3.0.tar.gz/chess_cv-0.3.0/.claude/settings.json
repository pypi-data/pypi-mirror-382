{
  "permissions": {
    "allow": [
      "Bash(pytest:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(basedpyright:*)"
    ],
    "deny": [
      "Edit(CHANGELOG.md)",
      "Write(CHANGELOG.md)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "ruff check --select I --fix . && ruff format -s ."
          },
          {
            "type": "command",
            "command": "mdformat ."
          }
        ]
      }
    ]
  }
}

# Include important documentation files
include README.md
include LICENSE
include requirements.txt
include CONFIG.md
include env.template

# Include example files to help users understand the format
include examples/README.md
recursive-include examples *.json

# Exclude setup directory - users must provide their own
exclude setup
recursive-exclude setup *

# Exclude environment files - users must provide their own
exclude .env
exclude .env.*

# Exclude development and build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
global-exclude Thumbs.db

# Exclude version control
global-exclude .git*
global-exclude .svn

# Exclude IDE files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo

# Exclude virtual environments
exclude venv
recursive-exclude venv *
exclude env
recursive-exclude env *

# Exclude test files
exclude test_*.py
exclude *_test.py
exclude check_and_cleanup*.py

# Exclude development documentation (optional - remove lines if you want these in PyPI)
exclude CHANGELOG.md
exclude DIAGRAMS.md
exclude DISTRIBUTION.md
exclude PACKAGING_SUMMARY.md
exclude PRESENTATION.md
exclude QUICK_REFERENCE.md
exclude SUMMARY.md
exclude USAGE.md


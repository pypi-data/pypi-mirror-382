.PHONY: help install install-dev test test-unit test-integration test-verbose test-coverage lint format typecheck check run-demo run-cartpole run-mcp-client clean clean-all

# Default target
help:
	@echo "Available targets:"
	@echo "  make install          - Install the package with uv"
	@echo "  make install-dev      - Install with development dependencies"
	@echo "  make test             - Run all tests with coverage"
	@echo "  make test-unit        - Run only unit tests (skip integration)"
	@echo "  make test-integration - Run only integration tests"
	@echo "  make test-verbose     - Run tests with verbose output"
	@echo "  make test-coverage    - Run tests and open coverage report"
	@echo "  make lint             - Run linting with flake8"
	@echo "  make format           - Format code with black"
	@echo "  make format-check     - Check code formatting without modifying"
	@echo "  make typecheck        - Run type checking with mypy"
	@echo "  make check            - Run all checks (format, lint, typecheck, test)"
	@echo "  make run-demo         - Run CartPole in interactive mode"
	@echo "  make run-cartpole     - Run CartPole example"
	@echo "  make run-mcp-client   - Run MCP client example"
	@echo "  make clean            - Remove build artifacts and cache"
	@echo "  make clean-all        - Remove all generated files including htmlcov"

# Installation targets
install:
	@echo "ðŸ“¦ Installing gym-mcp-server..."
	uv pip install -e .

install-dev:
	@echo "ðŸ“¦ Installing gym-mcp-server with development dependencies..."
	uv pip install -e ".[dev,examples]"

# Testing targets
test:
	@echo "ðŸ§ª Running tests with coverage..."
	uv run pytest

test-unit:
	@echo "ðŸ§ª Running unit tests only..."
	uv run pytest -m "not integration"

test-integration:
	@echo "ðŸ§ª Running integration tests only..."
	uv run pytest -m integration

test-verbose:
	@echo "ðŸ§ª Running tests with verbose output..."
	uv run pytest -v

test-coverage:
	@echo "ðŸ§ª Running tests and generating coverage report..."
	uv run pytest
	@echo "ðŸ“Š Opening coverage report..."
	xdg-open htmlcov/index.html 2>/dev/null || open htmlcov/index.html 2>/dev/null || echo "Coverage report generated at htmlcov/index.html"

# Code quality targets
lint:
	@echo "ðŸ” Running flake8..."
	uv run flake8 gym_mcp_server/ tests/ examples/

format:
	@echo "âœ¨ Formatting code with black..."
	uv run black gym_mcp_server/ tests/ examples/

format-check:
	@echo "ðŸ” Checking code formatting..."
	uv run black --check gym_mcp_server/ tests/ examples/

typecheck:
	@echo "ðŸ” Running type checking with mypy..."
	uv run mypy gym_mcp_server/

check: format-check lint typecheck test
	@echo "âœ… All checks passed!"

# Demo and example targets
run-demo:
	@echo "ðŸŽ® Running CartPole in interactive mode..."
	uv run python -m gym_mcp_server --env CartPole-v1 --interactive

run-cartpole:
	@echo "ðŸŽ® Running CartPole example..."
	uv run python examples/run_cartpole.py

run-mcp-client:
	@echo "ðŸŽ® Running MCP client example..."
	uv run python examples/mcp_client_example.py

# Build and publish targets
build:
	@echo "ðŸ“¦ Building distribution packages..."
	rm -rf dist/
	uv pip install --upgrade build
	uv run python -m build
	@echo "âœ… Build complete! Packages in dist/"
	@ls -lh dist/

publish-test: build
	@echo "ðŸ“¤ Publishing to TestPyPI..."
	uv pip install --upgrade twine
	uv run twine upload --repository testpypi dist/*
	@echo "âœ… Published to TestPyPI!"
	@echo "ðŸ”— Check at: https://test.pypi.org/project/gym-mcp-server/"

publish: build
	@echo "ðŸ“¤ Publishing to PyPI..."
	@echo "âš ï¸  This will publish to the REAL PyPI!"
	@read -p "Are you sure? [y/N] " -n 1 -r; \
	echo; \
	if [[ $$REPLY =~ ^[Yy]$$ ]]; then \
		uv pip install --upgrade twine; \
		uv run twine upload dist/*; \
		echo "âœ… Published to PyPI!"; \
		echo "ðŸ”— Check at: https://pypi.org/project/gym-mcp-server/"; \
	else \
		echo "âŒ Publish cancelled"; \
		exit 1; \
	fi

# Cleanup targets
clean:
	@echo "ðŸ§¹ Cleaning build artifacts and cache..."
	rm -rf build/
	rm -rf dist/
	rm -rf *.egg-info
	rm -rf .pytest_cache
	rm -rf .mypy_cache
	find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true
	find . -type f -name "*.pyc" -delete
	find . -type f -name "*.pyo" -delete

clean-all: clean
	@echo "ðŸ§¹ Removing all generated files..."
	rm -rf htmlcov/
	rm -rf .coverage


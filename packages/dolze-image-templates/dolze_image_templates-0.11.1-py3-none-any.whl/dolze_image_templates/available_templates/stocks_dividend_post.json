{
  "name": "stocks_dividend_post",
  "description": "Black/Lime grid background with headline, body copy, and footer CTA",
  "size": { "width": 1080, "height": 1350 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://i.ibb.co/20Z2L17W/Black-Lime-Green-Gradient-Modern-Crypto-or-Stocks-Content-Instagram-Post-1.png",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1350 },
      "aspect_ratio": "cover"
    },

    { "type": "text", "text": "${brand_name}",
      "position": { "x": 110, "y": 100 },
      "font_size": 40, "color": [240, 240, 240], "font_path": "Poppins-SemiBold",
      "alignment": "center", "max_width": 840
    },

    { "type": "text", "text": "${title_line1}",
      "position": { "x": 60, "y": 240 },
      "font_size": 110, "color": [255, 255, 255], "font_path": "Poppins-ExtraBold",
      "alignment": "center", "max_width": 960, "line_height": 1.0
    },
    { "type": "text", "text": "${title_line2_accent}",
      "position": { "x": 60, "y": 360 },
      "font_size": 110, "color": [195, 255, 50], "font_path": "Poppins-ExtraBold",
      "alignment": "center", "max_width": 1000, "line_height": 1.0
    },

    { "type": "text", "text": "${body_text}",
      "position": { "x": 180, "y": 620 },
      "font_size": 38, "color": [240, 240, 240], "font_path": "Poppins-Italic",
      "alignment": "left", "max_width": 750, "line_height": 1.45
    },

    { "type": "text", "text": "${footer_question}",
      "position": { "x": 90, "y": 1130 },
      "font_size":32, "color": [255, 255, 255], "font_path": "Poppins-SemiBold",
      "alignment": "center", "max_width": 900
    },
  
    { "type": "text", "text": "${website_url}",
      "position": { "x": 550, "y": 1220 },
      "font_size": 25, "color": [255, 255, 255], "font_path": "Poppins-Regular",
      "alignment": "left", "max_width": 520
    }
  ],

  "validation": {
    "brand_name": { "field": "brand_name", "type": "text", "minLength": 2, "maxLength": 20 },
    "title_line1": { "field": "title_line1", "type": "text", "minLength": 3, "maxLength": 10 },
    "title_line2_accent": { "field": "title_line2_accent", "type": "text", "minLength": 3, "maxLength": 15 },
    "body_text": { "field": "body_text", "type": "text", "minLength": 40, "maxLength": 150 },
    "footer_question": { "field": "footer_question", "type": "text", "minLength": 8, "maxLength": 30 },
    "website_url": { "field": "website_url", "type": "text", "minLength": 3, "maxLength": 17 },
    "samples": {
      "brand_name": "Stock.Academy",
      "title_line1": "What is a",
      "title_line2_accent": "Dividend Stock?",
      "body_text": "A dividend stock gives you regular income from company profitsâ€”paid out to shareholders. Think of it as your investment earning you 'rent' every quarter.",
      "footer_question": "Want to learn passive income strategies?",
      "website_url": "www.reallygreatsite.com"
    }
  },
  "config": { "isImageUploadPresent": false, "sample_url": "https://i.ibb.co/Mk5SMb96/Black-Lime-Green-Gradient-Modern-Crypto-or-Stocks-Content-Instagram-Post.png" }
}



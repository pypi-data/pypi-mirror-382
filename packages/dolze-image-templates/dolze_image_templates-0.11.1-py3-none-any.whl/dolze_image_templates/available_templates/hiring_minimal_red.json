{
  "name": "hiring_minimal_red",
  "description": "We're Hiring layout with role, bullet points and CTA bar",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": true,
  "base_image_url": false,
  "components": [
    {
        "type": "image",
        "image_url": "https://iili.io/KIWc84S.png",
        "position": {
          "x": 0,
          "y": 0
        },
        "size": {
          "width": 1080,
          "height": 1080
        }
      },
    {
      "type": "text",
      "text": "${hiring_title}",
      "position": { "x": 100, "y": 100 },
      "font_size": 220,
      "color": [255, 0, 0],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 800,
      "line_height": 0.8

    },
    {
      "type": "text",
      "text": "${role_title}",
      "position": { "x": 100, "y": 540 },
      "font_size": 64,
      "color": [0, 0, 0],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 800
    },
    { "type": "text", "text": "• ${bullet1}", "position": { "x": 100, "y": 670 }, "font_size": 26, "color": [0,0,0], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 860, "line_height": 1.4 },
    { "type": "text", "text": "• ${bullet2}", "position": { "x": 100, "y": 730 }, "font_size": 26, "color": [0,0,0], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 860, "line_height": 1.4 },
    { "type": "text", "text": "• ${bullet3}", "position": { "x": 100, "y": 790 }, "font_size": 26, "color": [0,0,0], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 860, "line_height": 1.4 },

   
    {
      "type": "text",
      "text": "${cta_text}",
      "position": { "x": 300, "y": 910 },
      "font_size": 24,
      "color": [0, 0, 0],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 300
    },
    {
      "type": "text",
      "text": "${apply_instruction}",
      "position": { "x": 650, "y": 900 },
      "font_size": 18,
      "color": [0, 0, 0],
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 290
    },
    {
      "type": "text",
      "text": "${apply_email}",
      "position": { "x": 650, "y": 930 },
      "font_size": 22,
      "color": [0, 0, 0],
      "font_path": "Poppins-SemiBold",
      "alignment": "left",
      "max_width": 290
    }
  ],
  "validation": {
    "hiring_title": { "field": "hiring_title", "type": "text", "minLength": 1, "maxLength": 10 },
    "role_title": { "field": "role_title", "type": "text", "minLength": 1, "maxLength": 15 },
    "bullet1": { "field": "bullet1", "type": "text", "minLength": 1, "maxLength": 50 },
    "bullet2": { "field": "bullet2", "type": "text", "minLength": 1, "maxLength": 50 },
    "bullet3": { "field": "bullet3", "type": "text", "minLength": 1, "maxLength": 50 },
    "cta_text": { "field": "cta_text", "type": "text", "minLength": 1, "maxLength": 30 },
    "apply_instruction": { "field": "apply_instruction", "type": "text", "minLength": 1, "maxLength": 20 },
    "apply_email": { "field": "apply_email", "type": "text", "minLength": 3, "maxLength": 30 },
    "samples": {
      "hiring_title": "We're Hiring",
      "role_title": "Marketers",
      "bullet1": "Do you have a passion for marketing?",
      "bullet2": "Do you have experience in creating and executing marketing campaigns?",
      "bullet3": "Do you want to join a dynamic and innovative team?",
      "cta_text": "If yes, then apply now!",
      "apply_instruction": "Send your CV at email us:",
      "apply_email": "hello@reallygreatsite.com"
    },
    "fieldPrompt": {
      "hiring_title": "Enter the hiring title (e.g., We're Hiring)",
      "role_title": "Enter the job role (e.g., Marketers)",
      "bullet1": "Enter first qualification question",
      "bullet2": "Enter second qualification question",
      "bullet3": "Enter third qualification question",
      "cta_text": "Enter the call-to-action text",
      "apply_instruction": "Enter the application instruction text",
      "apply_email": "Enter the application email"
    }
  },
  "config": { "isImageUploadPresent": false, "sample_url": "https://iili.io/KIzNe3l.png" }
}



{
  "name": "announcement_template",
  "description": "Professional corporate announcement template with clean design, geometric shapes, and dynamic text overlays",
  "size": {
    "width": 1080,
    "height": 1350
  },
  "use_base_image": true,
  "base_image_url": false,
  "components": [
    {
        "type": "image",
        "image_url": "https://iili.io/KI7RPOG.png",
        "position": { "x": 0, "y": 0 },
        "size": { "width": 1080, "height": 1350 },
        "aspect_ratio": "cover"
      },
    {
      "type": "text",
      "text": "${announcement_header}",
      "position": {
        "x": 80,
        "y": 180
      },
      "font_size": 32,
      "color": "#000000",
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${main_announcement_text}",
      "position": {
        "x": 80,
        "y": 230
      },
      "font_size": 130,
      "color": "#000000",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 600,
      "line_height": 0.9
    },
    {
      "type": "text",
      "text": "${partner_company}",
      "position": {
        "x": 80,
        "y": 600
      },
      "font_size": 120,
      "color": "#0066CC",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 800
    },
    {
      "type": "text",
      "text": "${details_text}",
      "position": {
        "x": 80,
        "y": 1100
      },
      "font_size": 44,
      "color": "#ffffff",
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 400
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 80,
        "y": 1140
      },
      "font_size": 44,
      "color": "#ffffff",
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 300
    },
    {
      "type": "text",
      "text": "${company_name}",
      "position": {
        "x": 735,
        "y": 1120
      },
      "font_size": 34,
      "color": "#ffffff",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 500
    }
  ],
  "validation": {
    "announcement_header": {
      "field": "announcement_header",
      "type": "text",
      "minLength": 1,
      "maxLength": 22
    },
    "main_announcement_text": {
      "field": "main_announcement_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 23
    },
    "partner_company": {
      "field": "partner_company",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "details_text": {
      "field": "details_text",
      "type": "text",
      "minLength": 7,
      "maxLength": 20
    },
    "website_url": {
      "field": "website_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 22
    },
    "company_name": {
      "field": "company_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 15
    },
    "samples": {
      "announcement_header": "OFFICIAL ANNOUNCEMENT",
      "main_announcement_text": "We are\npartnering\nwith",
      "partner_company": "Rolk Inc.",
      "details_text": "More details on",
      "website_url": "www.reallygreatsite.com",
      "company_name": "WeisenhamTech"
    },
    "fieldPrompt": {
      "announcement_header": "Enter the announcement header text (e.g., OFFICIAL ANNOUNCEMENT, BIG NEWS, etc.). Keep it concise and impactful.",
      "main_announcement_text": "Enter your main announcement text with line breaks (e.g., 'We are\\npartnering\\nwith'). Use \\n for line breaks. Keep it concise and impactful.",
      "partner_company": "Enter the name of the partner company (e.g., Rolk Inc., TechCorp, etc.). Keep it concise and professional.",
      "details_text": "Enter the details text (e.g., More details on, Learn more at, etc.). Keep it short and clear.",
      "website_url": "Enter your website URL (e.g., www.yourcompany.com). Include www. for a professional appearance.",
      "company_name": "Enter your company name (e.g., WeisenhamTech, YourCompany, etc.). This will appear in the bottom right corner."
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://iili.io/KI7GXBs.png"
  }
}

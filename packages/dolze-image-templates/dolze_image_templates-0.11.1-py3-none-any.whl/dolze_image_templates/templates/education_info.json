{
  "name": "education_info",
  "description": "Refined educational template with vibrant full-bleed image, elegant text overlay, and modern design touches",
  "size": {
    "width": 2560,
    "height": 2560
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2560,
        "height": 2560
      },
      "opacity": 1.0,
      "tint_color": "#1A1A1A",
      "tint_opacity": 0.45,
      "gradient": {
        "type": "linear",
        "colors": ["#111111", "#111111"],
        "direction": 60,
        "center": [0.4, 0.4],
        "opacity": 1.0
      }
    },
    {
      "type": "rectangle",
      "position": {
        "x": 280,
        "y": 480
      },
      "size": {
        "width": 2000,
        "height": 1600
      },
      "fill_color": [255, 255, 255, 0.92],
      "border_radius": 60,
      "border_width": 1,
      "border_color": [230, 230, 235, 0.5]
    },
    {
      "type": "rectangle",
      "position": {
        "x": 460,
        "y": 600
      },
      "size": {
        "width": 120,
        "height": 10
      },
      "fill_color": [70, 90, 255, 1],
      "border_radius": 2.5,
      "gradient_config": {
        "type": "linear",
        "colors": [
          [70, 90, 255, 1],
          [120, 140, 255, 1]
        ],
        "angle": 45
      }
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": {
        "x": 460,
        "y": 620
      },
      "font_size": 88,
      "color": [70, 90, 255, 1],
      "font_path": "Roboto-Bold",
      "alignment": "left",
      "max_width": 1800,
      "letter_spacing": 3,
      "text_transform": "uppercase"
    },
    {
      "type": "text",
      "text": "${product_info}",
      "position": {
        "x": 460,
        "y": 800
      },
      "font_size": 80,
      "color": [20, 20, 30, 1],
      "font_path": "Roboto-Regular",
      "alignment": "left",
      "max_width": 1800,
      "line_height": 2.5
    },
    {
      "type": "rectangle",
      "position": {
        "x": 460,
        "y": 1820
      },
      "size": {
        "width": 300,
        "height": 4
      },
      "fill_color": [235, 235, 240, 1],
      "border_radius": 4,
      "opacity": 0.8
    },
    {
      "type": "text",
      "text": "${author}",
      "position": {
        "x": 460,
        "y": 1850
      },
      "font_size": 52,
      "color": [30, 30, 40, 1],
      "font_path": "Roboto-SemiBold",
      "alignment": "left",
      "max_width": 1200,
      "letter_spacing": 0.8
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 460,
        "y": 1920
      },
      "font_size": 44,
      "color": [100, 100, 120, 1],
      "font_path": "Roboto-Regular",
      "alignment": "left",
      "max_width": 1200,
      "letter_spacing": 0.4,
      "underline": {
        "color": [100, 100, 120, 0.5],
        "thickness": 1
      }
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 1840,
        "y": 1820
      },
      "size": {
        "width": 200,
        "height": 200
      },
      "border_radius": 100,
      "border_width": 5,
      "border_color": [255, 255, 255, 1],
      "opacity": 0.95
    }
  ],
  "validation": {
    "product_info": {
      "field": "product_info",
      "type": "text",
      "minLength": 1,
      "maxLength": 120
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "author": {
      "field": "author",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "read_time": {
      "field": "read_time",
      "type": "number",
      "minLength": 1,
      "maxLength": 3
    },
    "image_url": {
      "field": "image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 20
    },
    "samples": {
      "product_info": "Our company harnesses wind energy to power 1,500 homes per turbine annually.",
      "product_name": "DolzeAI",
      "author": "@dolze.ai",
      "website_url": "dolze.ai",
      "read_time": 4,
      "image_url": "https://example.com/wind_turbine.jpg"
    },
    "fieldPrompt": {
      "product_info": "Write your main educational content or information (max 120 characters). This could be key insights, product details, service descriptions, or educational content you want to highlight. Focus on valuable, actionable information that benefits your audience.",
      "product_name": "Create a clear, attention-grabbing title (5-20 characters) that summarizes your content. This will be displayed prominently at the top. Examples: Learn Python, Marketing Tips, Health Guide. Make it specific and compelling.",
      "author": "Enter your name, username, or organization name (e.g., @yourname, @expert, Your Organization). This establishes credibility and helps users identify the content source. Use your preferred professional identity.",
      "read_time": "Enter the estimated reading time in minutes (e.g., 4 for 4 mins, 2 for 2 mins). This helps users know what to expect and improves engagement. Be realistic about the time needed to read your content.",
      "image_url": "Create a detailed prompt for a high-quality, relevant image that complements your educational content. Include specific details about the subject matter, style, colors, and composition. The image will be used as a full background with a subtle overlay.",
      "website_url": "Enter your website URL (e.g., yourbusiness.com, blog.yourbrand.com). This will be displayed at the bottom of the content for additional credibility and traffic generation."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/education_info.png"
  }
}

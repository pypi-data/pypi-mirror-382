{
  "name": "brand_info_2",
  "description": "Enhanced product advertisement template for the products",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/mbcEtwwJKCf7jn4GnfzFm1thlhC3/6829afe6925fb5ef8c087942/business_assets/YellowandBlackIllustrationWebsiteDesignSocialMediaGraphic.png",
      "tint_color": "#121212",
      "tint_opacity": 0.15,
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "text",
      "text": "${service_hook}",
      "position": {
        "x": 150,
        "y": 150
      },
      "font_size": 50,
      "color": "#111112",
      "font_path": "Montserrat-Thin",
      "max_width": 780,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${service_name}",
      "position": {
        "x": 300,
        "y": 230
      },
      "font_size": 80,
      "font_path": "Montserrat-ExtraBold",
      "color": "#ffb300",
      "max_width": 480,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${content}",
      "position": {
        "x": 100,
        "y": 350
      },
      "font_size": 25,
      "font_path": "Montserrat-Thin",
      "color": "#121212",
      "max_width": 880,
      "alignment": "center"
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": {
        "x": 100,
        "y": 500
      },
      "size": {
        "width": 880,
        "height": 500
      },
      "border_radius": 20,
      "aspect_ratio": "contain"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 100,
        "y": 1030
      },
      "font_size": 20,
      "font_path": "Montserrat-Light",
      "color": "#111222",
      "max_width": 290,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${contact_number}",
      "position": {
        "x": 390,
        "y": 1030
      },
      "font_size": 20,
      "font_path": "Montserrat-Light",
      "color": "#111222",
      "max_width": 290,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${contact_email}",
      "position": {
        "x": 680,
        "y": 1030
      },
      "font_size": 20,
      "font_path": "Montserrat-Light",
      "color": "#111222",
      "max_width": 290,
      "alignment": "center"
    }
  ],
  "validation": {
    "service_hook": {
      "field": "service_hook",
      "type": "text",
      "minLength": 1,
      "maxLength": 23
    },
    "service_name": {
      "field": "service_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "content": {
      "field": "content",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "contact_number": {
      "field": "contact_number",
      "type": "text",
      "minLength": 1,
      "maxLength": 12
    },
    "website_url": {
      "field": "website_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 35
    },
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "contact_email": {
      "field": "contact_email",
      "type": "text",
      "minLength": 1,
      "maxLength": 25
    },
    "samples": {
      "service_hook": "Need a brand new",
      "content": "Expert developers deliver top-tier websites",
      "contact_number": "+123-456-7890",
      "website_url": "www.dolze.ai/careers",
      "product_image": "https://example.com/website_design.jpg",
      "contact_email": "contact@dolze.ai"
    },
    "fieldPrompt": {
      "service_hook": "Create an engaging opening question (4-6 words) that captures attention and creates curiosity. Examples: Need a brand new, Looking for premium, Want to upgrade. Do not include the product name as it will be added separately. Focus on creating urgency or desire.",
      "service_name": "Complete the hook with a specific service offering (1-3 words). Examples: website?, mobile app?, e-commerce?. This should flow naturally from the service_hook and be under 12 characters total.",
      "content": "Write compelling service description (1-2 sentences, max 50 characters) highlighting key benefits and expertise. Focus on what makes your service unique and valuable to potential customers.",
      "contact_number": "Enter your business phone number in format: +123-456-7890",
      "website_url": "Enter your website URL (e.g., www.yourcompany.com/careers)",
      "product_image": "Generate a detailed prompt for a high-quality product/service image (portrait orientation, 1920x1080 aspect ratio). Include specific details about the product, setting, lighting, and style to ensure professional results.",
      "contact_email": "Enter your business email address (e.g., contact@yourcompany.com)"
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatesbrand_info_2.png"
  }
}

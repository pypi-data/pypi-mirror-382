{
  "name": "sale_alert",
  "description": "Clean Q&A template with centered profile picture and question/answer layout",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "validation": {
    "sale_heading": {
      "field": "sale_heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 16
    },
    "sale_description": {
      "field": "sale_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 35
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 100
    },
    "sale_text": {
      "field": "sale_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 14
    },
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "samples": {
      "sale_heading": "Technology Sale",
      "sale_description": "Special Sale Only in August",
      "cta_text": "Shop Now!",
      "website_url": "www.dolze.ai",
      "sale_text": "30% off",
      "product_image": "https://example.com/sale_product.png"
    },
    "fieldPrompt": {
      "sale_heading": "Create a compelling sale title (2 words) that captures attention and creates urgency. Examples: Technology Sale, Summer Blowout, Flash Sale, Holiday Special. Use powerful, action-oriented words.",
      "sale_description": "Write an engaging sale description (under 35 characters) that highlights the offer and creates urgency. Examples: Special Sale Only in August, Limited Time Offer, Ends This Week. Focus on scarcity and exclusivity.",
      "cta_text": "Create a strong call-to-action (under 20 characters) that encourages immediate action. Examples: Shop Now!, Buy Today, Get Yours, Don't Miss Out. Use action verbs and create urgency.",
      "website_url": "Enter your website URL (e.g., www.yourcompany.com, shop.yourbrand.com). Include the full domain without http:// for a cleaner appearance.",
      "sale_text": "Enter the specific discount or offer details (under 8 characters). Examples: 30% off, 50% off, Buy 1 Get 1, Free Ship. Make it clear and compelling.",
      "product_image": "Create a detailed prompt for a high-quality product image (portrait orientation, 1080x1920 aspect ratio) that showcases your sale items. Include specific details about the product, setting, lighting, and style to create an attractive, professional presentation that drives sales."
    }
  },
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "fill_color": "#f1c993",
      "outline_color": null
    },
    {
      "type": "cta_button",
      "text": "",
      "position": {
        "x": 700,
        "y": 100
      },
      "size": {
        "width": 300,
        "height": 550
      },
      "font_size": 50,
      "color": "#5d3215",
      "bg_color": "#5d3215",
      "font_path": "EBGaramond-Regular",
      "alignment": "left",
      "max_width": 250,
      "corner_radius": 200
    },
    {
      "type": "text",
      "text": "${sale_text}",
      "position": {
        "x": 750,
        "y": 160
      },
      "font_size": 100,
      "color": "#ffffff",
      "font_path": "MarckScript-Regular",
      "alignment": "center",
      "max_width": 200,
      "corner_radius": 200
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": {
        "x": 400,
        "y": 350
      },
      "size": {
        "width": 800,
        "height": 800
      },
      "aspect_ratio": "contain"
    },
    {
      "type": "text",
      "text": "${sale_heading}",
      "position": {
        "x": 70,
        "y": 100
      },
      "font_size": 120,
      "color": "#8a4803",
      "font_path": "seasons",
      "alignment": "left",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${sale_description}",
      "position": {
        "x": 70,
        "y": 400
      },
      "font_size": 50,
      "color": "#8a4803",
      "font_path": "EBGaramond-Regular",
      "alignment": "left",
      "max_width": 250
    },
    {
      "type": "rectangle",
      "position": {
        "x": 400,
        "y": 300
      },
      "size": {
        "width": 250,
        "height": 3
      },
      "fill_color": "#8a4803",
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": {
        "x": 150,
        "y": 650
      },
      "size": {
        "width": 3,
        "height": 200
      },
      "fill_color": "#8a4803",
      "outline_color": null
    },
    {
      "type": "cta_button",
      "position": {
        "x": -30,
        "y": 950
      },
      "size": {
        "width": 0,
        "height": 65
      },
      "padding": 100,
      "auto_width": true,
      "corner_radius": 90,
      "text": "${cta_text}",
      "font_size": 40,
      "color": "#ffffff",
      "bg_color": "#a67339",
      "font_path": "Raleway-Medium",
      "alignment": "right"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 60,
        "y": 1020
      },
      "font_size": 25,
      "color": "#b0571c",
      "font_path": "Poppins-Light",
      "alignment": "left",
      "max_width": 1080
    }
  ],
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatessale_alert.png"
  }
}

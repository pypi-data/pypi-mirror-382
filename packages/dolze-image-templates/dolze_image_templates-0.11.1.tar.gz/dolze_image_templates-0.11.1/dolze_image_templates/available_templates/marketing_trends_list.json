{
  "name": "marketing_trends_list",
  "description": "Three-item marketing trends list with angled ribbons and headline",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    { "type": "image", "image_url": "https://i.ibb.co/Kzhz5mGR/Untitled-design-1.png", "position": { "x": 0, "y": 0 }, "size": { "width": 1080, "height": 1080 }, "aspect_ratio": "cover" },

   
    { "type": "text", "text": "${heading_word1}",
      "position": { "x": 340, "y": 100 },
      "font_size": 86, "color": "#E7DAEC", "font_path": "Poppins-ExtraBold",
      "alignment": "left", "max_width": 660
    },
    { "type": "text", "text": "${heading_word2}",
      "position": { "x": 340, "y": 180 },
      "font_size": 86, "color": "#E7DAEC", "font_path": "Poppins-ExtraBold",
      "alignment": "left", "max_width": 660
      
    },

    { "type": "text",
      "text": "${trend1}",
      "position": { "x": 200, "y": 172 },
      "font_size": 28,
      "color": [0,0,0],
      "font_path": "Raleway-Medium",
      "alignment": "left",
      "max_width": 530,
      "rotate": 6
    
    },
    { "type": "text",
      "text": "${trend2}",
      "position": { "x": 180, "y": 292 },
      "font_size": 28,
      "color": [0,0,0],
      "font_path": "Raleway-Medium",
      "alignment": "left",
      "max_width": 530,
      "rotate": -4
    
    },
    { "type": "text",
      "text": "${trend3}",
      "position": { "x": 190, "y": 375 },
      "font_size": 28,
      "color": [0,0,0],
      "font_path": "Raleway-Medium",
      "alignment": "left",
      "max_width": 530,
      "rotate": 3
    },
    { "type": "text", "text": "${handle}",
      "position": { "x": 400, "y": 980 },
      "font_size": 28, "color": [220, 220, 220], "font_path": "Poppins-Regular"
    }
  ],

  "validation": {
    "heading_word1": { "field": "heading_word1", "type": "text", "minLength": 2, "maxLength": 10 },
    "heading_word2": { "field": "heading_word2", "type": "text", "minLength": 2, "maxLength": 10 },
    "trend1": { "field": "trend1", "type": "text", "minLength": 10, "maxLength": 50 },
    "trend2": { "field": "trend2", "type": "text", "minLength": 10, "maxLength": 50 },
    "trend3": { "field": "trend3", "type": "text", "minLength": 10, "maxLength": 50 },
    "handle": { "field": "handle", "type": "text", "minLength": 2, "maxLength": 15 },
    "samples": {
      "heading_word1": "MARKETING",
      "heading_word2": "TRENDS",
      "trend1": "User-generated content marketing is only going up.",
      "trend2": "Hyper-personalization. Get creative with your data.",
      "trend3": "Human storytelling. We love the real stories.",
      "handle": "@ReallyGreatSite"
    }
  },

  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://i.ibb.co/Pqf9p6s/Untitled-design-2.png"
  }
}



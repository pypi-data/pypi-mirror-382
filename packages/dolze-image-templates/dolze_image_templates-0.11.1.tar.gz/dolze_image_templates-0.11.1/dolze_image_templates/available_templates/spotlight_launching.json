{
  "name": "spotlight_launching",
  "description": "Dramatic spotlight launching template with countdown timer and dark theme",
  "size": {
    "width": 1080,
    "height": 1350
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://i.ibb.co/wr3LR2J1/Black-White-Modern-Launching-Soon-Instagram-Post.png",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1350
      }
    },
    {
      "type": "text",
      "text": "${main_title}",
      "position": {
        "x": 120,
        "y": 550
      },
      "font_size": 160,
      "color": [255, 255, 255, 255],
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "max_width": 900,
      "line_height": 0.9
    },
    {
      "type": "text",
      "text": "${subheading}",
      "position": {
        "x": 430,
        "y": 900
      },
      "font_size": 40,
      "color": [255, 255, 255, 255],
      "font_path": "Poppins-Regular",
      "alignment": "center"
    },
   
    {
      "type": "text",
      "text": "${days}",
      "position": {
        "x": 270,
        "y": 980
      },
      "font_size": 120,
      "color": [20, 20, 20, 255],
      "font_path": "Poppins-Bold",
      "alignment": "center"
    },
    
    {
      "type": "text",
      "text": "${hours}",
      "position": {
        "x": 470,
        "y": 980
      },
      "font_size": 120,
      "color": [20, 20, 20, 255],
      "font_path": "Poppins-Bold",
      "alignment": "center"
    },

    {
      "type": "text",
      "text": "${minutes}",
      "position": {
        "x": 680,
        "y": 980
      },
      "font_size": 120,
      "color": [20, 20, 20, 255],
      "font_path": "Poppins-Bold",
      "alignment": "center"
    },
  
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 440,
        "y": 1220
      },
      "font_size": 35,
      "color": [255, 255, 255, 255],
      "font_path": "Poppins-Medium",
      "alignment": "center"
    }
  ],
  "validation": {
    "main_title": {
      "field": "main_title",
      "type": "text",
      "minLength": 5,
      "maxLength": 30
    },
    "subheading": {
      "field": "subheading",
      "type": "text",
      "minLength": 3,
      "maxLength": 20
    },
    "days": {
      "field": "days",
      "type": "text",
      "minLength": 1,
      "maxLength": 3
    },
    "hours": {
      "field": "hours",
      "type": "text",
      "minLength": 1,
      "maxLength": 3
    },
    "minutes": {
      "field": "minutes",
      "type": "text",
      "minLength": 1,
      "maxLength": 3
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 5,
      "maxLength": 20
    },
    "samples": {
      "main_title": "Launching Soon",
      "subheading": "Countdown",
      "days": "04",
      "hours": "06",
      "minutes": "21",
      "cta_text": "Stay Tuned!"
    },
    "fieldPrompt": {
      "main_title": "Enter your main announcement text (5-30 characters). Examples: 'Launching Soon', 'Coming This Week', 'Big Reveal Ahead', 'Get Ready!'. Make it exciting and attention-grabbing.",
      "subheading": "Enter a short subheading (3-20 characters). Examples: 'Countdown', 'Launching In', 'Coming In'.",
      "days": "Enter the number of days remaining (1-3 digits). Examples: '04', '15', '365'. This will be displayed in the first countdown box.",
      "hours": "Enter the number of hours remaining (1-3 digits). Examples: '06', '12', '23'. This will be displayed in the second countdown box.",
      "minutes": "Enter the number of minutes remaining (1-3 digits). Examples: '21', '45', '59'. This will be displayed in the third countdown box.",
      "cta_text": "Enter your call-to-action text (5-20 characters). Examples: 'Stay Tuned!', 'Get Notified', 'Follow Us', 'Join Waitlist'. Make it engaging and actionable."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://i.ibb.co/rGVRbWJN/Black-White-Modern-Launching-Soon-Instagram-Post.png"
  }
}

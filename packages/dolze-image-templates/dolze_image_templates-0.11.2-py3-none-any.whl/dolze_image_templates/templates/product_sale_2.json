{
  "name": "product_sale_2",
  "description": "Modern split-screen product promotion with image on left and content on right",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": {
        "x": 40,
        "y": -300
      },
      "size": {
        "width": 1000,
        "height": 400
      },
      "fill_color": "#719156",
      "border_radius": 600
    },
    {
      "type": "text",
      "text": "${business_name}",
      "position": {
        "x": 150,
        "y": 10
      },
      "font_size": 55,
      "color": [255, 255, 255],
      "font_path": "MarckScript-Regular",
      "alignment": "center",
      "max_width": 780,
      "letter_spacing": 1.9
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": {
        "x": 50,
        "y": 150
      },
      "font_size": 90,
      "color": [30, 30, 40],
      "font_path": "Poppins-ExtraBold",
      "alignment": "center",
      "max_width": 980,
      "letter_spacing": 1.9
    },
    {
      "type": "text",
      "text": "${usp1}  |  ${usp2}",
      "position": {
        "x": 50,
        "y": 300
      },
      "font_size": 40,
      "color": [30, 30, 40],
      "font_path": "Poppins-Light",
      "alignment": "center",
      "max_width": 980,
      "letter_spacing": 1.9
    },
    {
      "type": "text",
      "text": "${product_highlights}",
      "position": {
        "x": 750,
        "y": 500
      },
      "font_size": 70,
      "color": [30, 30, 40],
      "font_path": "MarckScript-Regular",
      "alignment": "center",
      "max_width": 280,
      "letter_spacing": 1.9
    },
    {
      "type": "cta_button",
      "text": "${cta_text}",
      "position": {
        "x": 750,
        "y": 760
      },
      "size": {
        "width": 300,
        "height": 80
      },
      "auto_width": true,
      "bg_color": "#719156",
      "text_color": [255, 255, 255, 1],
      "font_size": 36,
      "padding": 70,
      "font_path": "Montserrat-Regular",
      "corner_radius": 40
    },
    {
      "type": "text",
      "text": "${social_handle}",
      "position": {
        "x": 0,
        "y": 1000
      },
      "font_size": 30,
      "color": [30, 30, 40],
      "font_path": "HappyMonkey-Regular",
      "alignment": "center",
      "max_width": 300,
      "letter_spacing": 1.9
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "border_radius": 30,
      "position": {
        "x": 60,
        "y": 350
      },
      "size": {
        "width": 600,
        "height": 600
      },
      "aspect_ratio": "contain"
    }
  ],
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 16
    },
    "usp1": {
      "field": "usp1",
      "type": "text",
      "minLength": 1,
      "maxLength": 16
    },
    "usp2": {
      "field": "usp2",
      "type": "text",
      "minLength": 1,
      "maxLength": 16
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "product_highlights": {
      "field": "product_highlights",
      "type": "text",
      "minLength": 1,
      "maxLength": 14
    },
    "social_handle": {
      "field": "social_handle",
      "type": "text",
      "minLength": 1,
      "maxLength": 25
    },
    "business_name": {
      "field": "business_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 25
    },
    "samples": {
      "product_image": "https://images.pexels.com/photos/1181677/pexels-photo-1181677.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
      "heading": "Digital Planner",
      "usp1": "Undated Planner",
      "usp2": "Hyperlinked Pages",
      "cta_text": "Book Now",
      "product_highlights": "Seamless Planning",
      "social_handle": "@dolze_ai",
      "business_name": "Dolze AI"
    },
    "fieldPrompt": {
      "product_image": "Create a detailed prompt for a high-quality product image that showcases your offering. Include specific details about the subject, setting, lighting, colors, and composition. Focus on making the product look appealing and professional to potential customers.",
      "heading": "Write a compelling product name or category (max 17 characters) that clearly identifies what you're selling. Examples: Digital Planner, Smart Watch, Fitness Tracker. Be specific and descriptive.",
      "usp1": "Create a unique selling point (max 16 characters) that highlights a key benefit or feature. Examples: Undated Planner, Wireless Charging, Water Resistant. Focus on what makes your product special.",
      "usp2": "Write another unique selling point (max 16 characters) that complements the first USP. Examples: Hyperlinked Pages, Long Battery Life, Premium Materials. Highlight additional value propositions.",
      "cta_text": "Create a clear call-to-action (max 10 characters) that encourages immediate response. Examples: Book Now, Shop Today, Get Yours, Order Here. Make it action-oriented and compelling.",
      "product_highlights": "Write a key product highlight (max 14 characters) that emphasizes the main benefit. Examples: Best Seller, New Arrival, Limited Time. Create urgency or excitement.",
      "business_name": "Enter your business name as you want it to appear on the design. Use your official business name or preferred branding for maximum recognition and credibility."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatesproduct_sale_2.png"
  }
}

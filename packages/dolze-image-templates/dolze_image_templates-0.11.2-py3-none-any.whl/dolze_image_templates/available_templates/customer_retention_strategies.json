{
  "name": "customer_retention_strategies",
  "description": "Six-card strategies layout with elegant header and website footer",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://i.ibb.co/6RwF4Mfy/Customer-Retention-Strategies-Instagram-Post-1.png",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 }
    },

    {
      "type": "text",
      "text": "${heading}",
      "position": { "x": 100, "y": 120 },
      "font_size": 44,
      "color": [20, 20, 20, 1],
      "font_path": "Montserrat-Medium",
      "alignment": "center",
      "max_width": 900
    },
    {
      "type": "text",
      "text": "${title}",
      "position": { "x": 40, "y": 160 },
      "font_size": 86,
      "color": [20, 20, 20, 1],
      "font_path": "CormorantGaramond-Bold",
      "alignment": "center",
      "max_width": 1000
    },

    { "type": "text", "text": "${card1}", "position": { "x": 160, "y": 400 }, "font_size": 26, "color": [28, 28, 28, 1], "font_path": "Poppins-Regular", "alignment": "center", "max_width": 220, "line_spacing": 1.25 },
    { "type": "text", "text": "${card2}", "position": { "x": 430, "y": 400 }, "font_size": 26, "color": [28, 28, 28, 1], "font_path": "Poppins-Regular", "alignment": "center", "max_width": 220, "line_spacing": 1.25 },
    { "type": "text", "text": "${card3}", "position": { "x": 690, "y": 400 }, "font_size": 26, "color": [28, 28, 28, 1], "font_path": "Poppins-Regular", "alignment": "center", "max_width": 220, "line_spacing": 1.25 },
    { "type": "text", "text": "${card4}", "position": { "x": 160, "y": 730 }, "font_size": 26, "color": [28, 28, 28, 1], "font_path": "Poppins-Regular", "alignment": "center", "max_width": 220, "line_spacing": 1.25 },
    { "type": "text", "text": "${card5}", "position": { "x": 430, "y": 730 }, "font_size": 26, "color": [28, 28, 28, 1], "font_path": "Poppins-Regular", "alignment": "center", "max_width": 220, "line_spacing": 1.25 },
    { "type": "text", "text": "${card6}", "position": { "x": 690, "y": 730 }, "font_size": 26, "color": [28, 28, 28, 1], "font_path": "Poppins-Regular", "alignment": "center", "max_width": 220, "line_spacing": 1.25 },

    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 35, "y": 1000 },
      "font_size": 24,
      "color": [34, 34, 34, 1],
      "font_path": "Montserrat-Medium",
      "alignment": "center",
      "max_width": 1000
    }
  ],
  "validation": {
   
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "title": {
      "field": "title",
      "type": "text",
      "minLength": 1,
      "maxLength": 17
    },
    "card1": { "field": "card1", "type": "text", "minLength": 1, "maxLength": 40 },
    "card2": { "field": "card2", "type": "text", "minLength": 1, "maxLength": 40 },
    "card3": { "field": "card3", "type": "text", "minLength": 1, "maxLength": 40 },
    "card4": { "field": "card4", "type": "text", "minLength": 1, "maxLength": 40 },
    "card5": { "field": "card5", "type": "text", "minLength": 1, "maxLength": 40 },
    "card6": { "field": "card6", "type": "text", "minLength": 1, "maxLength": 40 },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 40
    },
    "samples": {
      "heading": "6 Strategies for",
      "title": "Customer Retention",
      "card1": "Make it easy for customers to do business with you.",
      "card2": "Offer quality products and services.",
      "card3": "Provide excellent customer service.",
      "card4": "Build customer loyalty programs.",
      "card5": "Keep your promises to customers.",
      "card6": "Encourage customer referrals.",
      "website_url": "www.reallygreatsite.com"
    },
    "fieldPrompt": {
      "heading": "Short line above the title (e.g., 6 Strategies for).",
      "title": "Big serif title (e.g., Customer Retention).",
      "card1": "Top-left card text. Keep to two short lines if possible.",
      "card2": "Top-middle card text.",
      "card3": "Top-right card text.",
      "card4": "Bottom-left card text.",
      "card5": "Bottom-middle card text.",
      "card6": "Bottom-right card text.",
      "website_url": "Your website or handle shown at the bottom center."
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://i.ibb.co/DHr1gLzL/Customer-Retention-Strategies-Instagram-Post.png"
  }
}



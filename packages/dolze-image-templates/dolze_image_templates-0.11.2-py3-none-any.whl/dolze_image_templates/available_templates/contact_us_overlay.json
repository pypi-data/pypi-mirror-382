{
    "name": "contact_us_overlay",
    "description": "Overlay four contact text lines next to existing icons on a predesigned card background.",
    "size": { "width": 1080, "height": 1080 },
    "use_base_image": false,
    "components": [
      {
        "type": "image",
        "image_url": "https://i.ibb.co/nqJzVQsp/User-generated-content-marketing-is-only-going-one-direction-and-that-direction-is-UP-2.png",
        "position": { "x": 0, "y": 0 },
        "size": { "width": 1080, "height": 1080 },
        "aspect_ratio": "cover"
      },

        { "type": "text", "text": "${company_name}",   "position": { "x": 240, "y": 220 }, "font_size": 32, "color": [240,240,240], "font_path": "Roboto-Medium", "alignment": "left", "max_width": 680 },

      { "type": "text", "text": "${phone}",   "position": { "x": 310, "y": 557 }, "font_size": 36, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 },
      { "type": "text", "text": "${email}",   "position": { "x": 310, "y": 640 }, "font_size": 36, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 },
      { "type": "text", "text": "${website}", "position": { "x": 310, "y": 722 }, "font_size": 36, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 },
      { "type": "text", "text": "${address}", "position": { "x": 310, "y": 810 }, "font_size": 36, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 }
    ],
  
    "validation": {
        "company_name":   { "field": "company_name",   "type": "text", "minLength": 7,  "maxLength": 10 },

      "phone":   { "field": "phone",   "type": "text", "minLength": 7,  "maxLength": 15 },
      "email":   { "field": "email",   "type": "text", "minLength": 6,  "maxLength": 20 },
      "website": { "field": "website", "type": "text", "minLength": 6,  "maxLength": 20 },
      "address": { "field": "address", "type": "text", "minLength": 6,  "maxLength": 20 },
      "samples": {
        "company_name":"Dolze AI",
        "phone": "123-456-7890",
        "email": "hello@reallygreatsite.com",
        "website": "www.reallygreatsite.com",
        "address": "123 Anywhere St., Any City"
      }
    },
  
    "config": { "isImageUploadPresent": false }
  }
  
  
  
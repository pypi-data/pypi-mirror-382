{
  "name": "coming_soon",
  "description": "Coming soon template",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "tint": {
        "type": "linear",
        "center": [
          0.5,
          0.5
        ],
        "colors": [
          [
            1,
            1,
            1,
            1
          ],
          [
            1,
            1,
            1,
            0.9
          ],
          [
            1,
            1,
            1,
            0.8
          ],
          [
            1,
            1,
            1,
            0.6
          ],
          [
            1,
            1,
            1,
            0.2
          ],
          [
            1,
            1,
            1,
            0.0
          ],
          [
            1,
            1,
            1,
            0.0
          ]
        ],
        "opacity": 0.9
      },
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 60,
        "y": 300
      },
      "size": {
        "width": 200,
        "height": 200
      },
      "aspect_ratio": "cover"
    },
    {
      "type": "text",
      "text": "${business_name}",
      "position": {
        "x": 60,
        "y": 500
      },
      "font_size": 50,
      "color": [
        255,
        255,
        255,
        1
      ],
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 540
    },
    {
      "type": "text",
      "text": "${text}",
      "position": {
        "x": 60,
        "y": 650
      },
      "font_size": 100,
      "color": [
        255,
        255,
        255,
        1
      ],
      "font_path": "Dream_Avenue",
      "alignment": "left",
      "max_width": 540
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 60,
        "y": 950
      },
      "font_size": 30,
      "color": [
        255,
        255,
        255,
        1
      ],
      "font_path": "Montserrat-Medium",
      "alignment": "left",
      "max_width": 540
    },
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 1000
      },
      "size": {
        "width": 1080,
        "height": 8
      },
      "fill_color": [
        255,
        255,
        255,
        1
      ]
    }
  ],
  "validation": {
    "background_image_url": {
      "field": "background_image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "business_name": {
      "field": "business_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "text": {
      "field": "text",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 20
    },
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "subheading": {
      "field": "subheading",
      "type": "text",
      "minLength": 1,
      "maxLength": 10050
    },
    "samples": {
      "background_image_url": "https://example.com/coming_soon_bg.jpg",
      "business_name": "Dolze AI",
      "text": "Notify Me",
      "website_url": "dolze.ai",
      "heading": "New Product Coming",
      "subheading": "Revolutionary tool launching soon!"
    },
    "fieldPrompt": {
      "background_image_url": "Create a detailed prompt for a high-quality square background image (1080x1080) that represents your upcoming product or service. Include specific details about the subject matter, style, colors, lighting, and atmosphere. Consider the industry, target audience, and brand aesthetic. The image should be visually appealing and create anticipation for your launch.",
      "business_name": "Enter your company or business name as you want it to appear on the design. Keep it concise and professional (e.g., TechCorp, InnovateLab, Your Company).",
      "text": "Write a compelling call-to-action phrase (2-3 words) that encourages users to stay updated. Examples: Notify Me, Get Updates, Stay Tuned, Coming Soon, Be First. Make it action-oriented and exciting.",
      "website_url": "Enter your website URL where users can learn more or sign up for updates (e.g., yourcompany.com, launch.yourcompany.com). Include the full domain without http:// for a cleaner look."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/coming_soon.png"
  }
}
{
  "name": "quote_template",
  "description": "Enhanced quote template for quotes",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/b0e778c6-cab5-4e92-a357-8e6a422e5ebf.png",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "text",
      "text": "${quote}",
      "position": {
        "x": 340,
        "y": 300
      },
      "font_size": 60,
      "color": "#b0571c",
      "font_path": "Montserrat-Medium",
      "alignment": "left",
      "max_width": 750,
      "line_height": 1.8
    },
    {
      "type": "text",
      "text": "${social_handle}",
      "position": {
        "x": 0,
        "y": 950
      },
      "font_size": 40,
      "max_width": 1080,
      "alignment": "center",
      "color": [1, 1, 1, 1],
      "font_path": "Outfit-Regular"
    }
  ],
  "validation": {
    "quote": {
      "field": "quote",
      "type": "text",
      "minLength": 15,
      "maxLength": 70
    },
    "username": {
      "field": "username",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "social_handle": {
      "field": "social_handle",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "samples": {
      "quote": "Success is not the absence of obstacles, but the courage to push through them.",
      "username": "@motivator",
      "social_handle": "@motivator"
    },
    "fieldPrompt": {
      "quote": "Write an inspiring, motivational, or thought-provoking quote (14-18 words, max 70 characters) that resonates with your audience. Focus on universal themes like success, perseverance, innovation, or personal growth. Make it memorable and shareable.",
      "social_handle": "Enter your social media handle (max 20 characters) with appropriate prefix (e.g., @username, @companyname). This helps build your social presence and allows people to connect with you."
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/quote_template.png"
  }
}

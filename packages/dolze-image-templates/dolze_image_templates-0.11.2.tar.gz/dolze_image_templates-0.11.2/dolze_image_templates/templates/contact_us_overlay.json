{
  "name": "contact_us_overlay",
  "description": "Overlay four contact text lines next to existing icons on a predesigned card background.",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "aspect_ratio": "cover"
    },

    { "type": "text", "text": "${phone}",   "position": { "x": 300, "y": 565 }, "font_size": 40, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 },
    { "type": "text", "text": "${email}",   "position": { "x": 300, "y": 645 }, "font_size": 40, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 },
    { "type": "text", "text": "${website}", "position": { "x": 300, "y": 725 }, "font_size": 40, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 },
    { "type": "text", "text": "${address}", "position": { "x": 300, "y": 805 }, "font_size": 40, "color": [41,41,41], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 680 }
  ],

  "validation": {
    "background_image_url": { "field": "background_image_url", "type": "image_url" },
    "phone":   { "field": "phone",   "type": "text", "minLength": 7,  "maxLength": 40 },
    "email":   { "field": "email",   "type": "text", "minLength": 6,  "maxLength": 60 },
    "website": { "field": "website", "type": "text", "minLength": 6,  "maxLength": 60 },
    "address": { "field": "address", "type": "text", "minLength": 6,  "maxLength": 90 },
    "samples": {
      "background_image_url": "https://i.ibb.co/nqJzVQsp/User-generated-content-marketing-is-only-going-one-direction-and-that-direction-is-UP-2.png",
      "phone": "123-456-7890",
      "email": "hello@reallygreatsite.com",
      "website": "www.reallygreatsite.com",
      "address": "123 Anywhere St., Any City"
    }
  },

  "config": { "isImageUploadPresent": false }
}



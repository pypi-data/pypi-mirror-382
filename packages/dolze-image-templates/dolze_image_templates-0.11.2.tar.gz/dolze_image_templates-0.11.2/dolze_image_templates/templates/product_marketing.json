{
  "name": "product_marketing",
  "description": "Modern hiring post with bold text and accent color for job position",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/mbcEtwwJKCf7jn4GnfzFm1thlhC3/6829afe6925fb5ef8c087942/business_assets/BlackRedGeometricBusinessMarketingInstagramPost.png"
    },
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "position": {
        "x": 50,
        "y": 20
      },
      "size": {
        "width": 1040,
        "height": 700
      }
    },
    {
      "type": "polygon",
      "position": {
        "x": 0,
        "y": 650
      },
      "fill_color": [255, 255, 255, 0.99],
      "points": [
        [0, 0],
        [150, 0],
        [120, 70],
        [0, 70],
        [0, 0]
      ]
    },
    {
      "type": "polygon",
      "position": {
        "x": 0,
        "y": 400
      },
      "fill_color": [255, 1, 1, 0.8],
      "points": [
        [0, 0],
        [570, 0],
        [470, 300],
        [0, 300],
        [0, 0]
      ]
    },
    {
      "type": "text",
      "position": {
        "x": 20,
        "y": 430
      },
      "text": "${heading}",
      "font_path": "Outfit-Bold",
      "font_size": 55,
      "max_width": 450,
      "line_height": 1.4,
      "color": "#ffffff"
    },
    {
      "type": "text",
      "position": {
        "x": 70,
        "y": 750
      },
      "text": "${description}",
      "font_path": "Outfit-Regular",
      "font_size": 25,
      "max_width": 640,
      "line_height": 1.9,
      "color": "#ffffff"
    },
    {
      "type": "text",
      "position": {
        "x": 70,
        "y": 950
      },
      "text": "LEARN MORE",
      "font_path": "Outfit-Bold",
      "font_size": 35,
      "line_height": 1.9,
      "underline": true,
      "color": "#ffffff"
    },
    {
      "type": "polygon",
      "position": {
        "x": 250,
        "y": 0
      },
      "fill_color": [100, 100, 100, 0.5],
      "points": [
        [0, 0],
        [580, 0],
        [520, 70],
        [60, 70],
        [0, 0]
      ]
    },
    {
      "type": "text",
      "text": "${social_handle}",
      "position": {
        "x": 300,
        "y": 10
      },
      "max_width": 500,
      "font_path": "Poppins-Bold",
      "font_size": 35,
      "line_height": 1.9,
      "color": "#ffffff",
      "alignment": "center"
    }
  ],
  "validation": {
    "social_handle": {
      "field": "social_handle",
      "type": "text",
      "minLength": 1,
      "maxLength": 15,
      "default": "@dolze.ai"
    },
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 40
    },
    "description": {
      "field": "description",
      "type": "text",
      "minLength": 50,
      "maxLength": 150
    },
    "background_image_url": {
      "field": "background_image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "samples": {
      "social_handle": "@dolze.ai",
      "heading": "Boost Your Marketing",
      "description": "Elevate your brand with our innovative marketing tools and strategies.",
      "background_image_url": "https://example.com/marketing_bg.jpg"
    },
    "fieldPrompt": {
      "background_image_url": "Create a detailed prompt for a high-quality marketing image (minimum 1000x800px) that visually represents your marketing message or brand. Include specific details about the subject, setting, lighting, colors, and composition. For best results, specify a professional, modern aesthetic with good contrast and space for text overlay. Portrait orientation with 4:5 aspect ratio recommended.",
      "social_handle": "Enter your social media handle with platform prefix (e.g., @yourbrand, @companyname, fb.com/yourbrand). This will be displayed prominently on the design. Include the @ symbol or platform identifier for better recognition.",
      "heading": "Write a compelling, action-oriented headline (15-40 characters) that captures your marketing message. Examples: Boost Your Brand, Grow Your Business, Marketing That Works, Scale Your Success. Focus on benefits and outcomes.",
      "description": "Craft a persuasive description (2-3 sentences, max 150 characters) that explains your marketing offer or value proposition. Highlight key benefits, unique selling points, or what makes your solution special. Use active language and focus on results."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatesproduct_marketing.png"
  }
}

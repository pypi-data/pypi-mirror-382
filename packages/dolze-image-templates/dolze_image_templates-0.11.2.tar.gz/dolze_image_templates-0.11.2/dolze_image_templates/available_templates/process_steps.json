{
  "name": "process_steps",
  "description": "Process steps infographic with numbered timeline and text boxes",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": true,
  "base_image_url": false,
  "components": [
    {
            "type": "image",
            "image_url": "https://iili.io/KIRMsou.png",
        "position": {
          "x": 0,
          "y": 0
        },
        "size": {
          "width": 1080,
          "height": 1080
        }
      },
    { "type": "text", "text": "${main_title}", "position": { "x": 150, "y": 60 }, "font_size": 64, "color": "#2e307a", "font_path": "Poppins-Bold", "alignment": "center", "max_width": 800 },
    { "type": "text", "text": "${step1_text}", "position": { "x": 100, "y": 240 }, "font_size": 30, "color": "#363754", "font_path": "Poppins-Regular", "alignment": "center", "max_width": 350, "line_height": 1.3 },
    { "type": "text", "text": "${step2_text}", "position": { "x": 630, "y": 430 }, "font_size": 30, "color": "#363754",  "font_path": "Poppins-Regular", "alignment": "center", "max_width": 350, "line_height": 1.3 },
    { "type": "text", "text": "${step3_text}", "position": { "x": 100, "y": 610 }, "font_size": 30, "color": "#363754",  "font_path": "Poppins-Regular", "alignment": "center", "max_width": 350, "line_height": 1.3 },
    { "type": "text", "text": "${step4_text}", "position": { "x": 630, "y": 790 }, "font_size": 30, "color": "#363754", "font_path": "Poppins-Regular", "alignment": "center", "max_width": 350, "line_height": 1.3 },
    { "type": "text", "text": "${website_url}", "position": { "x": 140, "y": 1020 }, "font_size": 20, "color": "#2e307a", "font_path": "Poppins-Bold", "alignment": "left", "max_width": 800 }

  ],
  "validation": {
    "website_url": { "field": "website_url", "type": "url", "minLength": 1, "maxLength": 20 },
    "main_title": { "field": "main_title", "type": "text", "minLength": 1, "maxLength": 15 },
    "step1_text": { "field": "step1_text", "type": "text", "minLength": 1, "maxLength": 50 },
    "step2_text": { "field": "step2_text", "type": "text", "minLength": 1, "maxLength": 50 },
    "step3_text": { "field": "step3_text", "type": "text", "minLength": 1, "maxLength": 50 },
    "step4_text": { "field": "step4_text", "type": "text", "minLength": 1, "maxLength": 50 },
    "samples": {
      "website_url": "https://www.dolze.ai",
      "main_title": "Our Process",
      "step1_text": "Develop a marketing plan that's in line with the company's goal.",
      "step2_text": "Identify your target audience & where they like to hang out.",
      "step3_text": "Research & analyze your social media competitors",
      "step4_text": "Make a hyper-targeted campaign to boost your account's growth."
    }
  },
  "config": { "isImageUploadPresent": false, "sample_url": "https://iili.io/KIREOOX.png" }
}

{
  "name": "faq_white_post",
  "description": "White aesthetic FAQ with two Q&A blocks over paper texture background",
  "size": { "width": 1080, "height": 1350 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://i.ibb.co/nTYbT7G/White-Aesthetic-Simple-Product-FAQ-Instagram-Post.png",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1350 },
      "aspect_ratio": "cover"
    },

    { "type": "text", "text": "${q1}",
      "position": { "x": 270, "y": 670 },
      "font_size": 32, "color": [34, 34, 34], "font_path": "Poppins-BoldItalic",
      "alignment": "left", "max_width": 720, "line_height": 1.15
    },
    { "type": "text", "text": "${a1}",
      "position": { "x": 270, "y": 720 },
      "font_size": 32, "color": [34, 34, 34], "font_path": "Poppins-Regular",
      "alignment": "left", "max_width": 720, "line_height": 1.1
    },

    { "type": "text", "text": "${q2}",
      "position": { "x": 270, "y": 840 },
      "font_size": 32, "color": [34, 34, 34], "font_path": "Poppins-BoldItalic",
      "alignment": "left", "max_width": 720, "line_height": 1.15
    },
    { "type": "text", "text": "${a2}",
      "position": { "x": 270, "y": 890 },
      "font_size": 32, "color": [34, 34, 34], "font_path": "Poppins-Regular",
      "alignment": "left", "max_width": 720, "line_height": 1.35
    },

    { "type": "text", "text": "${brand_name}",
      "position": { "x": 120, "y": 1100 },
      "font_size": 32, "color": [34, 34, 34], "font_path": "Poppins-Regular",
      "alignment": "right", "max_width": 840
    }
  ],

  "validation": {
    "q1": { "field": "q1", "type": "text", "minLength": 8, "maxLength": 30 },
    "a1": { "field": "a1", "type": "text", "minLength": 10, "maxLength": 60 },
    "q2": { "field": "q2", "type": "text", "minLength": 8, "maxLength": 30 },
    "a2": { "field": "a2", "type": "text", "minLength": 10, "maxLength": 70 },
    "brand_name": { "field": "brand_name", "type": "text", "minLength": 2, "maxLength": 20 },
    "samples": {
      "q1": "Are sale items eligible for return?",
      "a1": "Sale items are final and cannot be returned or exchanged.",
      "q2": "What is your return and refund policy?",
      "a2": "We accept returns within 14 days of delivery with original condition.",
      "brand_name": "Aldenaire & Partners"
    }
  },
  "config": { "isImageUploadPresent": false, "sample_url": "https://i.ibb.co/BKGqh2vD/White-Aesthetic-Simple-Product-FAQ-Instagram-Post-1.png" }
}



{
    "name": "spotlight_launching_text",
    "description": "Spotlight background with centered launching message and website",
    "size": {
        "width": 1080,
        "height": 1080
    },
    "use_base_image": false,
    "components": [
        {
            "type": "image",
            "image_url": "https://i.ibb.co/DfLHxTDT/Black-and-White-Simple-Launching-Soon-Facebook-Post.png",
            "position": {
                "x": 0,
                "y": 0
            },
            "size": {
                "width": 1080,
                "height": 1080
            }
        },
        {
            "type": "text",
            "text": "${company_name}",
            "position": {
                "x": 80,
                "y": 250
            },
            "font_size": 36,
            "color": [
                235,
                235,
                235,
                255
            ],
            "font_path": "Poppins-Regular",
            "alignment": "center",
            "max_width": 920
        },
        {
            "type": "text",
            "text": "${headline}",
            "position": {
                "x": 60,
                "y": 350
            },
            "font_size": 114,
            "color": [
                255,
                255,
                255,
                255
            ],
            "font_path": "Poppins-ExtraBold",
            "alignment": "center",
            "max_width": 980,
            "line_height": 1
        },
        {
            "type": "text",
            "text": "${description}",
            "position": {
                "x": 170,
                "y": 640
            },
            "font_size": 34,
            "color": [
                255,
                255,
                255,
                255
            ],
            "font_path": "Poppins-Regular",
            "alignment": "center",
            "max_width": 750,
            "line_height": 1.1
        },
        {
            "type": "text",
            "text": "${website_url}",
            "position": {
                "x": 80,
                "y": 800
            },
            "font_size": 32,
            "color": [
                255,
                255,
                255,
                255
            ],
            "font_path": "Poppins-Light",
            "alignment": "center",
            "max_width": 920
        }
    ],
    "validation": {
        "company_name": {
            "field": "company_name",
            "type": "text",
            "minLength": 2,
            "maxLength": 15
        },
        "headline": {
            "field": "headline",
            "type": "text",
            "minLength": 3,
            "maxLength": 17
        },
        "description": {
            "field": "description",
            "type": "text",
            "minLength": 10,
            "maxLength": 70
        },
        "website_url": {
            "field": "website_url",
            "type": "text",
            "minLength": 5,
            "maxLength": 15
        },
        "samples": {
            "company_name": "Larana, Inc.",
            "headline": "LAUNCHING\nSOON",
            "description": "Get ready, because something amazing is coming your way! Our launch is just around the corner",
            "website_url": "www.reallygreatsite.com"
        },
        "fieldPrompt": {
            "company_name": "Small line above spotlight. Example: 'Larana, Inc.'",
            "headline": "Main headline. Use two lines if needed (use \\n to break).",
            "description": "Short teaser sentence below the headline.",
            "website_url": "Your website address at the bottom"
        }
    },
    "config": {
        "isImageUploadPresent": false,
        "sample_url": "https://i.ibb.co/ZnNp12s/Black-and-White-Simple-Launching-Soon-Facebook-Post-1.png"
    }
}
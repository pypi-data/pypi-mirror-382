{
  "name": "testimonial_card",
  "description": "Minimal testimonial card with author name, quote and role",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": true,
  "base_image_url": false,
  "components": [
    {
        "type": "image",
        "image_url": "https://iili.io/KIIrTOv.png",
        "position": { "x": 0, "y": 0 },
        "size": { "width": 1080, "height": 1080 },
        "aspect_ratio": "cover"
      },
    { "type": "text", "text": "${author_name}", "position": { "x": 360, "y": 370 }, "font_size": 42, "color": [45, 31, 26], "font_path": "Poppins-Bold", "alignment": "left", "max_width": 620 },
    { "type": "text", "text": "${quote}", "position": { "x": 360, "y": 450 }, "font_size": 32, "color": [45, 31, 26], "font_path": "Poppins-Regular", "alignment": "left", "max_width": 530, "line_height": 1.3 },
    { "type": "text", "text": "${author_role}", "position": { "x": 360, "y": 720 }, "font_size": 22, "color": [135, 109, 86], "font_path": "Poppins-Italic", "alignment": "left", "max_width": 620 },
    { "type": "text", "text": "${company_name}", "position": { "x": 400, "y": 1020 }, "font_size": 22, "color": [135, 109, 86], "font_path": "Poppins-Medium", "alignment": "left", "max_width": 620 }

  ],
  "validation": {
    "author_name": { "field": "author_name", "type": "text", "minLength": 1, "maxLength": 40 },
    "quote": { "field": "quote", "type": "text", "minLength": 1, "maxLength": 240 },
    "author_role": { "field": "author_role", "type": "text", "minLength": 1, "maxLength": 80 },
    "company_name": { "field": "author_role", "type": "text", "minLength": 1, "maxLength": 80 },

    "samples": {
      "author_name": "Olivia Wilson",
      "company_name": "ReallyGreatCompany",

      "quote": "Social media can also be used to share interesting facts, true stories, and other important information.",
      "author_role": "CEO of Ginyard International Co."
    }
  },
  "config": { "isImageUploadPresent": false, "sample_url": "https://iili.io/KII4Z67.png" }
}



    urls="https://pt.wikipedia.org/wiki/Lu√≠s_XIV_de_Fran√ßa",
    keywords=["Lu√≠s XIV", "Fran√ßa", "Rei Sol"],
    output_path=r"projeto/output",
    wait=2,
    threshold=90

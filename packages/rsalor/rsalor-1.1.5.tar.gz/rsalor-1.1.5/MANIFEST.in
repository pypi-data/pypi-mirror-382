# Include files required for building C++ extension
include rsalor/weights/include/*
recursive-include rsalor/weights *.cpp

# Exclude files and directories that should not be in the package
exclude Logo.png
exclude fig/*
exclude src/*
exclude tmp/*
exclude 0_*
exclude conda-env.yml
exclude test_data/*
global-exclude *.py[cod]
global-exclude __pycache__/*
global-exclude *.so
global-exclude *.a
global-exclude *.o

# Exclude build artifacts
global-exclude rsalor/weights/build/*
global-exclude *.egg-info/*
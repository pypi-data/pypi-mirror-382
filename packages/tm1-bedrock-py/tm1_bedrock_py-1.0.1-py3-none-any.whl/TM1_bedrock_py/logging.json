{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "%(asctime)s :: %(levelname)s :: %(filename)s :: %(funcName)s() :: %(message)s :: %(process)d - %(threadName)s"
      },

      "detailed": {
        "format": "%(asctime)s :: %(levelname)s :: %(name)s :: %(filename)s :: %(funcName)s() :: %(message)s :: %(process)d - %(threadName)s"
      },

      "exec_metrics": {
        "format": "%(asctime)s :: %(levelname)s :: %(name)s :: %(fileName)s :: %(func)s() :: %(exec_id)s :: %(message)s :: %(process)d - %(threadName)s"
      },

      "json": {
        "format": "%(asctime)s :: %(levelname)s :: %(name)s :: %(filename)s :: %(funcName)s() :: %(message)s :: %(process)d - %(threadName)s",
        "class": "json_logging.JSONLogFormatter"
      },

      "json_exec_metrics": {
        "format": "%(asctime)s :: %(levelname)s :: %(name)s :: %(fileName)s :: %(func)s() :: %(exec_id)s :: %(message)s :: %(process)d - %(threadName)s",
        "class": "TM1_bedrock_py.json_log_formatter.JSONLogFormatter"
      }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },

        "console_exec_metrics": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "exec_metrics",
            "stream": "ext://sys.stdout"
        },

        "file": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "detailed",
            "filename": "../logs/TM1_bedrock_py.log",
            "mode": "a",
            "encoding": "utf8"
        },

        "file_exec_metrics": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "exec_metrics",
            "filename": "../logs/TM1_bedrock_py.log",
            "mode": "a",
            "encoding": "utf8"
        },

        "json_file": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "json",
            "filename": "../logs/TM1_bedrock_py.json.log",
            "mode": "a",
            "encoding": "utf8"
        },

        "json_file_exec_metrics": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "json_exec_metrics",
            "filename": "../logs/TM1_bedrock_py.json.log",
            "mode": "a",
            "encoding": "utf8"
        },

        "json_file_benchmark_metrics": {
            "class": "logging.FileHandler",
            "level": "DEBUG",
            "formatter": "json_exec_metrics",
            "filename": "../logs/TM1_bedrock_py_benchmark.json.log",
            "mode": "w",
            "encoding": "utf8"
        }
    },

    "loggers": {
        "TM1_bedrock_py": {
            "level": "WARNING",
            "handlers": ["console", "file", "json_file"],
            "propagate": false
        },
        "exec_metrics": {
            "level": "WARNING",
            "handlers": ["console_exec_metrics", "file_exec_metrics", "json_file_exec_metrics"],
            "propagate": false
        },
        "benchmark_metrics": {
            "level": "WARNING",
            "handlers": ["json_file_benchmark_metrics"],
            "propagate": false
        }
    },

    "root": {
        "level": "WARNING",
        "handlers": ["console"]
    }
}

# Include all markdown and text files
include *.md
include *.txt

# Include specific files
include LICENSE
include CHANGELOG.md

# Include all files in the 'examples' directory
recursive-include examples *

# Include all files in the 'fastapi_cacher' directory
recursive-include fastapi_cacher *

# Exclude specific patterns and files
global-exclude *__pycache__*
global-exclude *.pyc
global-exclude test_app.py

# Exclude entire directories
prune build
prune dist
prune fastapi_cacher.egg-info

Screen {
    background: $screen-background;
}


RichLog {
    background: transparent 0%;
    overflow-y: auto;
}

/* --- Progress Bar Styling --- */
PatchedProgressBar {
    dock: bottom;
    height: 3;
    border: round $standard-gray;
    margin: -1 0 1 0;
}

ProgressBar > Bar {
    width: 1fr;
}

Bar > .bar--indeterminate {
    color: $progress-indeterminate;
}

Bar > .bar--complete {
    color: $progress-complete;
}
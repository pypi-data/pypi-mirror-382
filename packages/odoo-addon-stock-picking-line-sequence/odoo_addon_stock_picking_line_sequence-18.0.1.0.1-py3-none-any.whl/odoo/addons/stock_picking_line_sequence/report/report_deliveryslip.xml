<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_delivery_document" inherit_id="stock.report_delivery_document">
        <xpath expr="//table[1]/thead/tr/th[1]" position="before">
            <th>
                <strong>Line Number</strong>
            </th>
        </xpath>
        <xpath expr="//table[1]/tbody/tr/td[1]" position="before">
            <td>
                <span t-field="move.visible_sequence" />
            </td>
        </xpath>
        <xpath expr="//table[2]/thead/tr/th[1]" position="before">
            <th>
                <strong>Line Number</strong>
            </th>
        </xpath>
    </template>

    <template
        id="report_delivery_has_serial_moveline"
        inherit_id="stock.stock_report_delivery_has_serial_move_line"
    >
        <xpath expr="//td[1]" position="before">
            <td>
                <span t-field="move_line.move_id.visible_sequence" />
            </td>
        </xpath>
    </template>

    <template
        id="report_delivery_aggregated_moveline"
        inherit_id="stock.stock_report_delivery_aggregated_move_lines"
    >
        <xpath expr="//td[1]" position="before">
            <td class="text-center" name="move_line_aggregated_visible_sequence">
                <t t-if=" 'visible_sequence' in aggregated_lines[line]">
                    <span t-esc="aggregated_lines[line]['visible_sequence']" />
                </t>
            </td>
        </xpath>
    </template>
</odoo>

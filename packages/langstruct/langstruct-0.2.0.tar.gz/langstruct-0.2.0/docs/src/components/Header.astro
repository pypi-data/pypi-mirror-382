---
import ThemeToggle from "./ThemeToggle.astro";
import { getCollection } from "astro:content";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // Remove leading slash
---

<header
	class="sticky top-0 z-50 w-full border-b border-gray-200 dark:border-gray-800 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md"
>
	<nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
		<div class="flex h-16 items-center justify-between">
			<!-- Logo -->
			<div class="flex items-center">
				<a href="/" class="flex items-center space-x-2">
					<div
						class="h-8 w-8 rounded-lg bg-gradient-to-br from-primary-500 to-purple-600 p-1.5"
					>
						<svg
							class="h-full w-full text-white"
							viewBox="0 0 24 24"
							fill="currentColor"
						>
							<path
								d="M12 2L2 7v10c0 5.55 3.84 9.74 9 10 5.16-.26 9-4.45 9-10V7l-10-5z"
							></path>
						</svg>
					</div>
					<span class="text-xl font-bold text-gray-900 dark:text-white"
						>LangStruct</span
					>
				</a>
			</div>

			<!-- Desktop Navigation -->
			<div class="hidden md:block">
				<div class="ml-10 flex items-baseline space-x-4">
					<a
						href="/docs/getting-started"
						class={`nav-link ${currentPath.startsWith("docs/") ? "active" : ""}`}
					>
						Documentation
					</a>
					<a
						href="/examples"
						class={`nav-link ${currentPath.startsWith("examples") ? "active" : ""}`}
					>
						Examples
					</a>
					<a
						href="/api"
						class={`nav-link ${currentPath.startsWith("api") ? "active" : ""}`}
					>
						API Reference
					</a>
					<a
						href="/blog"
						class={`nav-link ${currentPath.startsWith("blog") ? "active" : ""}`}
					>
						Blog
					</a>
				</div>
			</div>

			<!-- Right side buttons -->
			<div class="flex items-center space-x-4">
				<ThemeToggle />

				<!-- GitHub Link -->
				<a
					href="https://github.com/langstruct/langstruct"
					class="btn-ghost p-2"
					aria-label="View on GitHub"
					target="_blank"
					rel="noopener"
				>
					<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path
							d="M12 0C5.374 0 0 5.373 0 12 0 17.302 3.438 21.8 8.207 23.387c.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"
						></path>
					</svg>
				</a>

				<!-- Mobile menu button -->
				<button
					id="mobile-menu-button"
					class="md:hidden btn-ghost p-2"
					aria-label="Open menu"
				>
					<svg
						class="h-5 w-5"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>

		<!-- Mobile menu -->
		<div id="mobile-menu" class="md:hidden hidden pb-4">
			<div class="space-y-1">
				<a
					href="/docs/getting-started"
					class={`nav-link block ${currentPath.startsWith("docs/") ? "active" : ""}`}
				>
					Documentation
				</a>
				<a
					href="/examples"
					class={`nav-link block ${currentPath.startsWith("examples") ? "active" : ""}`}
				>
					Examples
				</a>
				<a
					href="/api"
					class={`nav-link block ${currentPath.startsWith("api") ? "active" : ""}`}
				>
					API Reference
				</a>
				<a
					href="/blog"
					class={`nav-link block ${currentPath.startsWith("blog") ? "active" : ""}`}
				>
					Blog
				</a>
			</div>
		</div>
	</nav>
</header>

<script>
	document.addEventListener("DOMContentLoaded", () => {
		const button = document.getElementById("mobile-menu-button");
		const menu = document.getElementById("mobile-menu");

		if (button && menu) {
			button.addEventListener("click", () => {
				menu.classList.toggle("hidden");
			});
		}
	});
</script>

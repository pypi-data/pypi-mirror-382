[database]
host = {{ app.db_host | default('localhost') }}
port = {{ app.db_port | default(5432) }}
{% if database_name -%}
name = {{ database_name }}
{% endif %}

[deployment]
environment = {{ environment | default('development') }}
{% if replicas -%}
replicas = {{ replicas }}
{% endif %}
{% if image_tag -%}
image_tag = {{ image_tag }}
{% endif %}

[settings]
debug = {{ 'true' if app.debug_mode else 'false' }}
log_level = {{ 'DEBUG' if app.debug_mode else 'INFO' }}
{% if project_id -%}
project_id = {{ project_id }}
{% endif %}


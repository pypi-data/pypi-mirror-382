version: '3.8'

services:
  app:
    image: {{ image_tag | default('app:latest') }}
    container_name: {{ app_name | default('app') }}
    restart: unless-stopped
    ports:
      - "{{ port | default(3000) }}:{{ port | default(3000) }}"
    environment:
      - NODE_ENV={{ environment | default('development') }}
      - APP_NAME={{ app_name | default('app') }}
      - VERSION={{ version | default('0.0.1') }}
      - DATABASE_HOST={{ database_host | default('db') }}
      - DATABASE_PORT={{ port | default(5432) }}
      {% if project_id -%}
      - PROJECT_ID={{ project_id }}
      {% endif %}
      {% if features -%}
      {% for feature in features %}
      - FEATURE_{{ feature | upper }}=true
      {% endfor %}
      {% endif %}
    depends_on:
      - db
    networks:
      - app-network
    {% if replicas and replicas > 1 -%}
    deploy:
      replicas: {{ replicas }}
      restart_policy:
        condition: on-failure
    {% endif %}
    # @PRESERVE_START
    # Add your custom app service configuration here
    # This section will be preserved when the template is regenerated
    # @PRESERVE_END

  db:
    image: postgres:13
    container_name: {{ app_name | default('app') }}_db
    restart: unless-stopped
    environment:
      - POSTGRES_DB={{ app_name | default('app') }}_db
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=password
    ports:
      - "{{ port | default(5432) }}:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - app-network

volumes:
  postgres_data:

networks:
  app-network:
    driver: bridge


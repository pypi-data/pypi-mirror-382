# Combined User Configuration
# Generated from: data/*.json using glob pattern
# Timestamp: {{ TIMESTAMP }}

users:
{% for user in users -%}
  - username: {{ user.username }}
    name: "{{ user.name }}"
    email: {{ user.email }}
    role: {{ user.role }}
    team: {{ user.team }}
    projects: {{ user.projects | tojson }}
    stats:
      commits: {{ user.stats.commits }}
      pull_requests: {{ user.stats.pull_requests }}
      code_reviews: {{ user.stats.code_reviews }}
{% endfor %}

summary:
  total_users: {{ users | length }}
  total_commits: {{ users | map(attribute='stats.commits') | sum }}
  total_pull_requests: {{ users | map(attribute='stats.pull_requests') | sum }}
  total_code_reviews: {{ users | map(attribute='stats.code_reviews') | sum }}
  teams:
{% for user in users -%}
    - {{ user.team }}
{% endfor %}

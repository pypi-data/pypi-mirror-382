# Production Configuration
# This file is conditionally generated only in production environment
# Generated by: {{ generator }} on {{ generated_date }}

[application]
name = {{ app.name }}
version = {{ app.version }}
environment = {{ app.environment }}
debug = {{ 'true' if app.debug_mode else 'false' }}

[database]
type = {{ app.database.type }}
host = {{ app.database.host }}
port = {{ app.database.port }}
name = {{ app.database.name }}
pool_size = {{ app.database.pool_size }}
ssl = {{ 'true' if app.database.ssl else 'false' }}

[api]
version = {{ app.api.version }}
rate_limiting = {{ 'true' if app.api.rate_limiting.enabled else 'false' }}
rate_limit_rpm = {{ app.api.rate_limiting.requests_per_minute }}
auth_type = {{ app.api.authentication.type }}
token_expiry_hours = {{ app.api.authentication.token_expiry_hours }}

[caching]
enabled = {{ 'true' if app.caching.enabled else 'false' }}
backend = {{ app.caching.backend }}
ttl_seconds = {{ app.caching.ttl_seconds }}
{% if app.caching.backend == "redis" %}
redis_host = {{ app.caching.redis.host }}
redis_port = {{ app.caching.redis.port }}
redis_db = {{ app.caching.redis.db }}
{% endif %}

[monitoring]
metrics_enabled = {{ 'true' if app.monitoring.metrics_enabled else 'false' }}
tracing_enabled = {{ 'true' if app.monitoring.tracing_enabled else 'false' }}

[logging]
enabled = {{ 'true' if infrastructure.logging.enabled else 'false' }}
level = {{ infrastructure.logging.level }}

